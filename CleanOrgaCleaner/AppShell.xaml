<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CleanOrgaCleaner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CleanOrgaCleaner.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <!-- Login Page (shown first, no tabs) -->
    <ShellContent
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Shell.TabBarIsVisible="False" />

    <!-- Main Tab Bar (after login) -->
    <TabBar Route="MainTabs">
        <ShellContent
            Title="Heute"
            Icon="{OnPlatform Android='home_icon.png', Default=''}"
            Route="TodayPage"
            ContentTemplate="{DataTemplate views:TodayPage}" />

        <ShellContent
            Title="Chats"
            Icon="{OnPlatform Android='chat_icon.png', Default=''}"
            Route="ChatListPage"
            ContentTemplate="{DataTemplate views:ChatListPage}" />

        <ShellContent
            Title="Einstellungen"
            Icon="{OnPlatform Android='settings_icon.png', Default=''}"
            Route="SettingsPage"
            ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>

</Shell>
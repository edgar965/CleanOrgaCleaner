<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.ChatPage"
             Title="Chat"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,Auto,*,Auto">

        <!-- Header mit Menu - mit SafeArea Padding oben -->
        <Grid Grid.Row="0" Padding="15,45,15,15">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667eea" Offset="0"/>
                    <GradientStop Color="#764ba2" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Logo and App Name -->
                <HorizontalStackLayout Grid.Column="0" Spacing="6" VerticalOptions="Center">
                    <Image Source="logo.jpg" WidthRequest="28" HeightRequest="28">
                        <Image.Clip>
                            <EllipseGeometry Center="14,14" RadiusX="14" RadiusY="14"/>
                        </Image.Clip>
                    </Image>
                    <Label Text="CleanOrga" FontSize="16" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Menu Dropdown Button -->
                <Button Grid.Column="1"
                        x:Name="MenuButton"
                        Text="Chat â–¼"
                        BackgroundColor="#ffffff33"
                        TextColor="White"
                        FontSize="13"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="10,6"
                        HorizontalOptions="Center"
                        Clicked="OnMenuButtonClicked"/>

                <!-- Header Label (hidden, for reference) -->
                <Label Grid.Column="2" x:Name="HeaderLabel" IsVisible="False"/>
            </Grid>
        </Grid>

        <!-- Offline Banner -->
        <Border x:Name="OfflineBanner"
                Grid.Row="1"
                BackgroundColor="#ff9800"
                Padding="10,8"
                IsVisible="False">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                <Label Text="Offline - Nachrichten werden gespeichert"
                       TextColor="White"
                       FontSize="13"
                       VerticalOptions="Center"/>
                <ActivityIndicator x:Name="OfflineSpinner"
                                   IsRunning="True"
                                   Color="White"
                                   WidthRequest="16"
                                   HeightRequest="16"/>
            </HorizontalStackLayout>
        </Border>

        <!-- Messages List -->
        <CollectionView Grid.Row="2"
                        x:Name="MessagesCollection"
                        Margin="10"
                        ItemsUpdatingScrollMode="KeepLastItemInView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5,3"
                            Padding="12"
                            StrokeShape="RoundRectangle 12"
                            BackgroundColor="{Binding BackgroundColor}">
                        <Border.Triggers>
                            <DataTrigger TargetType="Border"
                                         Binding="{Binding FromCleaner}"
                                         Value="True">
                                <Setter Property="Stroke" Value="#9c27b0"/>
                            </DataTrigger>
                            <DataTrigger TargetType="Border"
                                         Binding="{Binding FromCleaner}"
                                         Value="False">
                                <Setter Property="Stroke" Value="#2196F3"/>
                            </DataTrigger>
                        </Border.Triggers>

                        <VerticalStackLayout Spacing="5">
                            <!-- Header: Sender + Time -->
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="{Binding Sender}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>

                                <Label Grid.Column="1"
                                       Text="{Binding DatumZeit}"
                                       FontSize="11"
                                       TextColor="#888"/>
                            </Grid>

                            <!-- Message Text (possibly translated) -->
                            <Label Text="{Binding DisplayText}"
                                   FontSize="15"
                                   TextColor="#333"
                                   LineBreakMode="WordWrap"/>

                            <!-- Original Text (if translated) -->
                            <Label Text="{Binding OriginalText, StringFormat='(Original: {0})'}"
                                   FontSize="11"
                                   TextColor="#888"
                                   FontAttributes="Italic"
                                   IsVisible="{Binding HasTranslation}"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="ðŸ’¬"
                           FontSize="60"
                           Opacity="0.3"
                           HorizontalOptions="Center"/>
                    <Label Text="Noch keine Nachrichten"
                           FontSize="16"
                           TextColor="#999"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Input Area -->
        <Border Grid.Row="3"
                BackgroundColor="White"
                Padding="10"
                Stroke="Transparent">
            <Border.Shadow>
                <Shadow Brush="Gray" Offset="0,-2" Radius="5" Opacity="0.2"/>
            </Border.Shadow>
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*" RowSpacing="10">

                <!-- Text Input -->
                <Editor x:Name="MessageEditor"
                        Grid.Row="0"
                        Placeholder="Nachricht schreiben..."
                        HeightRequest="70"
                        BackgroundColor="#f5f5f5"/>

                <!-- Buttons -->
                <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">

                    <Button Grid.Column="1"
                            x:Name="PreviewButton"
                            Text="Vorschau"
                            BackgroundColor="#ff9800"
                            TextColor="White"
                            CornerRadius="10"
                            WidthRequest="100"
                            Clicked="OnPreviewClicked"/>

                    <Button Grid.Column="2"
                            x:Name="SendButton"
                            Text="Senden"
                            CornerRadius="10"
                            WidthRequest="100"
                            Clicked="OnSendClicked">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#667eea" Offset="0"/>
                                <GradientStop Color="#764ba2" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- Translation Preview Overlay -->
        <Border x:Name="TranslationPreview"
                Grid.RowSpan="4"
                BackgroundColor="#fff3e0"
                Padding="15"
                IsVisible="False"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Margin="20"
                StrokeShape="RoundRectangle 15"
                Stroke="Transparent">
            <VerticalStackLayout Spacing="15" WidthRequest="300">
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="Uebersetzungsvorschau"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#e65100"/>
                    <Button Grid.Column="1"
                            Text="X"
                            BackgroundColor="Transparent"
                            TextColor="#e65100"
                            Clicked="OnClosePreviewClicked"/>
                </Grid>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Dein Text:"
                           FontSize="12"
                           TextColor="#888"/>
                    <Label x:Name="PreviewOriginalLabel"
                           FontSize="14"
                           TextColor="#333"/>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Uebersetzung (fuer Admin):"
                           FontSize="12"
                           TextColor="#888"/>
                    <Label x:Name="PreviewTranslatedLabel"
                           FontSize="14"
                           TextColor="#333"
                           FontAttributes="Bold"/>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Rueckuebersetzung:"
                           FontSize="12"
                           TextColor="#888"/>
                    <Label x:Name="PreviewBackLabel"
                           FontSize="14"
                           TextColor="#333"
                           FontAttributes="Italic"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Border>

        <!-- Dropdown Menu Overlay -->
        <Grid x:Name="MenuOverlayGrid"
              Grid.RowSpan="4"
              IsVisible="False"
              ZIndex="1000">

            <!-- Background tap to close -->
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <!-- Menu dropdown -->
            <Border StrokeShape="RoundRectangle 12"
                    Stroke="Transparent"
                    Padding="0"
                    Margin="60,95,60,0"
                    VerticalOptions="Start">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#667eea" Offset="0"/>
                        <GradientStop Color="#764ba2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Shadow>
                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.3"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="0">
                    <Button x:Name="MenuTodayButton"
                            Text="ðŸ  Heute"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuTodayClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuChatButton"
                            Text="ðŸ’¬ Chat"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuChatClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuSettingsButton"
                            Text="âš™ï¸ Einstellungen"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuSettingsClicked"/>
                </VerticalStackLayout>
            </Border>
        </Grid>

    </Grid>
</ContentPage>

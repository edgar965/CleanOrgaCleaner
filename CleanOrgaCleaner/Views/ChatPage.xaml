<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.ChatPage"
             Title="Chat"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <!-- SAME structure as ChatListPage: Auto,* only -->
    <Grid RowDefinitions="Auto,*">

        <!-- Header - Row 0 -->
        <Grid Grid.Row="0" Padding="20,45,20,12" RowDefinitions="Auto,Auto" BackgroundColor="#1a3a5c">

            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
                <!-- App Name - Tappable to go to Today -->
                <Label Grid.Column="0"
                       Text="CleanOrga"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#2196F3"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLogoTapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <!-- Hamburger Menu Button (centered) -->
                <Button Grid.Column="1"
                        x:Name="MenuButton"
                        Text="≡"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="20,10"
                        HorizontalOptions="Center"
                        Clicked="OnMenuButtonClicked"/>

                <!-- Work toggle removed - not needed in ChatPage -->
            </Grid>

            <!-- Row 1: Current Page and User Info -->
            <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,8,0,0">
                <Label Grid.Column="0"
                       x:Name="PageTitleLabel"
                       Text=""
                       FontSize="18"
                       TextColor="White"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <Label Grid.Column="1"
                       x:Name="UserInfoLabel"
                       Text=""
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#4fc3f7"/>
            </Grid>
        </Grid>

        <!-- Content - Row 1 (fills ALL remaining space) -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*,Auto">

            <!-- Offline Banner -->
            <Frame Grid.Row="0" x:Name="OfflineBanner" BackgroundColor="#ff9800" Padding="10" IsVisible="False" Margin="0">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                    <Label Text="Offline" TextColor="White" FontSize="13"/>
                    <ActivityIndicator x:Name="OfflineSpinner" IsRunning="True" Color="White" WidthRequest="16" HeightRequest="16"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Messages -->
            <CollectionView Grid.Row="1" x:Name="MessagesCollection"
                            Margin="10,5,10,5"
                            ItemsUpdatingScrollMode="KeepLastItemInView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="3,2">
                            <!-- Eigene Nachrichten rechts -->
                            <Frame Padding="10" CornerRadius="12" MaximumWidthRequest="280"
                                   BackgroundColor="#dcf8c6" BorderColor="#25D366"
                                   HorizontalOptions="End"
                                   IsVisible="{Binding FromCurrentUser}">
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="{Binding DisplayText}" FontSize="14" TextColor="#333" LineBreakMode="WordWrap"/>
                                    <Label Text="{Binding DatumZeit}" FontSize="9" TextColor="#666" HorizontalOptions="End"/>
                                </VerticalStackLayout>
                            </Frame>
                            <!-- Nachrichten von anderen links -->
                            <Frame Padding="10" CornerRadius="12" MaximumWidthRequest="280"
                                   BackgroundColor="White" BorderColor="#ccc"
                                   HorizontalOptions="Start"
                                   IsVisible="{Binding IsFromOther}">
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="{Binding DisplayText}" FontSize="14" TextColor="#333" LineBreakMode="WordWrap"/>
                                    <Label Text="{Binding OriginalText, StringFormat='(Original: {0})'}"
                                           FontSize="9" TextColor="#888" FontAttributes="Italic"
                                           IsVisible="{Binding HasTranslation}"/>
                                    <Label Text="{Binding DatumZeit}" FontSize="9" TextColor="#666" HorizontalOptions="End"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="Noch keine Nachrichten" FontSize="16" TextColor="#999"
                           HorizontalOptions="Center" VerticalOptions="Center" Margin="0,50,0,0"/>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- INPUT AREA - inside content grid, at bottom -->
            <Grid Grid.Row="2" BackgroundColor="White" Padding="10" HeightRequest="60"
                  ColumnDefinitions="40,*,40,40" ColumnSpacing="8">
                <Button Grid.Column="0" x:Name="BackButton" Text="←" FontSize="16"
                        BackgroundColor="#666" TextColor="White" CornerRadius="20"
                        WidthRequest="40" HeightRequest="40" Clicked="OnCancelClicked"/>

                <Entry Grid.Column="1" x:Name="MessageEntry" Placeholder="Nachricht..." FontSize="14"
                       BackgroundColor="#f0f0f0" VerticalOptions="Center" HeightRequest="40"/>

                <Button Grid.Column="2" x:Name="SendButton" Text="➤" FontSize="16"
                        BackgroundColor="#25D366" TextColor="White" CornerRadius="20"
                        WidthRequest="40" HeightRequest="40" Clicked="OnSendClicked"/>

                <Button Grid.Column="3" x:Name="PreviewButton" Text="T" FontSize="14"
                        BackgroundColor="#2196F3" TextColor="White" CornerRadius="20"
                        WidthRequest="40" HeightRequest="40" Clicked="OnPreviewClicked"/>
            </Grid>
        </Grid>

        <!-- TRANSLATION POPUP OVERLAY -->
        <Grid Grid.RowSpan="2" x:Name="TranslationPreview" IsVisible="False" BackgroundColor="#80000000" ZIndex="100">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnClosePreviewClicked"/>
            </Grid.GestureRecognizers>

            <Frame BackgroundColor="#fff3e0" BorderColor="#e65100" CornerRadius="15"
                   Padding="15" Margin="20" VerticalOptions="Center" HorizontalOptions="Fill">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label x:Name="TranslationPreviewTitle" Text="Uebersetzung" FontSize="16"
                               FontAttributes="Bold" TextColor="#e65100"/>
                        <Button Grid.Column="1" Text="X" FontSize="14"
                                BackgroundColor="#e65100" TextColor="White"
                                CornerRadius="12" WidthRequest="28" HeightRequest="28"
                                Padding="0" Clicked="OnClosePreviewClicked"/>
                    </Grid>

                    <Label x:Name="YourTextLabel" Text="Dein Text:" FontSize="12" TextColor="#666"/>
                    <Frame BackgroundColor="White" Padding="8" CornerRadius="6">
                        <Label x:Name="PreviewOriginalLabel" FontSize="13" TextColor="#333"/>
                    </Frame>

                    <Label x:Name="TranslationForAdminLabel" Text="Uebersetzung:" FontSize="12" TextColor="#666"/>
                    <Frame BackgroundColor="White" Padding="8" CornerRadius="6">
                        <Label x:Name="PreviewTranslatedLabel" FontSize="13" TextColor="#333" FontAttributes="Bold"/>
                    </Frame>

                    <Label x:Name="BackTranslationLabel" Text="Rueckuebersetzung:" FontSize="12" TextColor="#666"/>
                    <Frame BackgroundColor="White" Padding="8" CornerRadius="6">
                        <Label x:Name="PreviewBackLabel" FontSize="13" TextColor="#333" FontAttributes="Italic"/>
                    </Frame>
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <!-- MENU OVERLAY -->
        <Grid Grid.RowSpan="2" x:Name="MenuOverlayGrid" IsVisible="False" ZIndex="101">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <Border StrokeShape="RoundRectangle 12"
                    Stroke="Transparent"
                    Padding="0"
                    Margin="60,95,60,0"
                    VerticalOptions="Start">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2196F3" Offset="0"/>
                        <GradientStop Color="#1976D2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Shadow>
                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.3"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="0">
                    <Button x:Name="MenuTodayButton" Text="Heute"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuTodayClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuChatButton" Text="Chat"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuChatClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuAuftragButton" Text="Auftrag"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuAuftragClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuSettingsButton" Text="Einstellungen"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuSettingsClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuLogoutButton" Text="Logout"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnLogoutClicked"/>
                </VerticalStackLayout>
            </Border>
        </Grid>

    </Grid>

</ContentPage>

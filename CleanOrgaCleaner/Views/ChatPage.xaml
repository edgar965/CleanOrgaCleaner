<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.ChatPage"
             Title="Chat"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,Auto,*,Auto">

        <!-- Header mit Menu - mit SafeArea Padding oben -->
        <Grid Grid.Row="0" Padding="15,45,15,15">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2196F3" Offset="0"/>
                    <GradientStop Color="#1976D2" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Logo and App Name -->
                <HorizontalStackLayout Grid.Column="0" Spacing="6" VerticalOptions="Center">
                    <Image Source="logo.jpg" WidthRequest="28" HeightRequest="28">
                        <Image.Clip>
                            <EllipseGeometry Center="14,14" RadiusX="14" RadiusY="14"/>
                        </Image.Clip>
                    </Image>
                    <Label Text="CleanOrga" FontSize="16" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Menu Dropdown Button -->
                <Button Grid.Column="1"
                        x:Name="MenuButton"
                        Text="Chat â–¼"
                        BackgroundColor="#1565C0"
                        TextColor="White"
                        FontSize="13"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="10,6"
                        HorizontalOptions="Center"
                        Clicked="OnMenuButtonClicked"/>

                <!-- Logout Button -->
                <Button Grid.Column="2"
                        x:Name="LogoutButton"
                        Text="Logout"
                        BackgroundColor="#1565C0"
                        TextColor="White"
                        FontSize="13"
                        CornerRadius="8"
                        Padding="10,6"
                        Clicked="OnLogoutClicked"/>
            </Grid>
        </Grid>

        <!-- Offline Banner -->
        <Border x:Name="OfflineBanner"
                Grid.Row="1"
                BackgroundColor="#ff9800"
                Padding="10,8"
                IsVisible="False">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                <Label Text="Offline - Nachrichten werden gespeichert"
                       TextColor="White"
                       FontSize="13"
                       VerticalOptions="Center"/>
                <ActivityIndicator x:Name="OfflineSpinner"
                                   IsRunning="True"
                                   Color="White"
                                   WidthRequest="16"
                                   HeightRequest="16"/>
            </HorizontalStackLayout>
        </Border>

        <!-- Messages List -->
        <CollectionView Grid.Row="2"
                        x:Name="MessagesCollection"
                        Margin="10"
                        ItemsUpdatingScrollMode="KeepLastItemInView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5,3"
                            Padding="12"
                            StrokeShape="RoundRectangle 12"
                            BackgroundColor="{Binding BackgroundColor}">
                        <Border.Triggers>
                            <DataTrigger TargetType="Border"
                                         Binding="{Binding FromCleaner}"
                                         Value="True">
                                <Setter Property="Stroke" Value="#9c27b0"/>
                            </DataTrigger>
                            <DataTrigger TargetType="Border"
                                         Binding="{Binding FromCleaner}"
                                         Value="False">
                                <Setter Property="Stroke" Value="#2196F3"/>
                            </DataTrigger>
                        </Border.Triggers>

                        <VerticalStackLayout Spacing="5">
                            <!-- Header: Sender + Time -->
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="{Binding Sender}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="#333"/>

                                <Label Grid.Column="1"
                                       Text="{Binding DatumZeit}"
                                       FontSize="11"
                                       TextColor="#888"/>
                            </Grid>

                            <!-- Message Text (possibly translated) -->
                            <Label Text="{Binding DisplayText}"
                                   FontSize="15"
                                   TextColor="#333"
                                   LineBreakMode="WordWrap"/>

                            <!-- Original Text (if translated) -->
                            <Label Text="{Binding OriginalText, StringFormat='(Original: {0})'}"
                                   FontSize="11"
                                   TextColor="#888"
                                   FontAttributes="Italic"
                                   IsVisible="{Binding HasTranslation}"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="ðŸ’¬"
                           FontSize="60"
                           Opacity="0.3"
                           HorizontalOptions="Center"/>
                    <Label Text="Noch keine Nachrichten"
                           FontSize="16"
                           TextColor="#999"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Input Area (WhatsApp Style) -->
        <Grid Grid.Row="3" BackgroundColor="White">
            <Grid.Shadow>
                <Shadow Brush="Gray" Offset="0,-2" Radius="5" Opacity="0.2"/>
            </Grid.Shadow>
            <Grid.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS" Value="10,8,10,35"/>
                    <On Platform="Android" Value="10,8,10,50"/>
                </OnPlatform>
            </Grid.Padding>
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">

                <!-- Back Button -->
                <Button Grid.Column="0"
                        x:Name="BackButton"
                        Text="â†"
                        FontSize="18"
                        BackgroundColor="#666"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="40"
                        HeightRequest="40"
                        VerticalOptions="End"
                        Margin="0,0,0,6"
                        Clicked="OnCancelClicked"/>

                <!-- Text Input with Send Button -->
                <Border Grid.Column="1"
                        BackgroundColor="#f0f0f0"
                        StrokeShape="RoundRectangle 22"
                        Stroke="Transparent"
                        Padding="4">
                    <Grid ColumnDefinitions="*,Auto,Auto">
                        <!-- Multi-line Text Editor -->
                        <Editor Grid.Column="0"
                                x:Name="MessageEditor"
                                Placeholder="Nachricht..."
                                FontSize="16"
                                BackgroundColor="Transparent"
                                AutoSize="TextChanges"
                                MaximumHeightRequest="120"
                                Margin="12,4,8,4"/>

                        <!-- Send Button -->
                        <Button Grid.Column="1"
                                x:Name="SendButton"
                                Text="âž¤"
                                FontSize="18"
                                TextColor="White"
                                BackgroundColor="#25D366"
                                CornerRadius="20"
                                WidthRequest="40"
                                HeightRequest="40"
                                VerticalOptions="End"
                                Margin="0,0,4,2"
                                Padding="0"
                                Clicked="OnSendClicked"/>

                        <!-- Translate/Preview Button -->
                        <Button Grid.Column="2"
                                x:Name="PreviewButton"
                                Text="ðŸŒ"
                                FontSize="18"
                                BackgroundColor="#2196F3"
                                TextColor="White"
                                CornerRadius="20"
                                WidthRequest="40"
                                HeightRequest="40"
                                VerticalOptions="End"
                                Margin="0,0,0,2"
                                Padding="0"
                                Clicked="OnPreviewClicked"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Translation Preview Overlay (Bottom Sheet) -->
        <Grid x:Name="TranslationPreview"
              Grid.RowSpan="4"
              IsVisible="False"
              BackgroundColor="#80000000"
              ZIndex="999">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnClosePreviewClicked"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border BackgroundColor="#fff3e0"
                    StrokeShape="RoundRectangle 20,20,0,0"
                    Stroke="Transparent"
                    VerticalOptions="End"
                    Margin="0">
                <Border.Shadow><Shadow Brush="Black" Offset="0,-5" Radius="20" Opacity="0.3"/></Border.Shadow>
                <ScrollView>
                <VerticalStackLayout Spacing="12" Padding="20,15,20,25">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label x:Name="TranslationPreviewTitle"
                               Text="Uebersetzungsvorschau"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#e65100"/>
                        <Button Grid.Column="1"
                                Text="âœ•"
                                FontSize="18"
                                BackgroundColor="Transparent"
                                TextColor="#e65100"
                                WidthRequest="40"
                                HeightRequest="40"
                                Clicked="OnClosePreviewClicked"/>
                    </Grid>

                    <VerticalStackLayout Spacing="5">
                        <Label x:Name="YourTextLabel"
                               Text="Dein Text:"
                               FontSize="13"
                               TextColor="#888"/>
                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 10" Stroke="Transparent" Padding="12">
                            <Label x:Name="PreviewOriginalLabel"
                                   FontSize="15"
                                   TextColor="#333"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label x:Name="TranslationForAdminLabel"
                               Text="Uebersetzung (fuer Admin):"
                               FontSize="13"
                               TextColor="#888"/>
                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 10" Stroke="Transparent" Padding="12">
                            <Label x:Name="PreviewTranslatedLabel"
                                   FontSize="15"
                                   TextColor="#333"
                                   FontAttributes="Bold"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label x:Name="BackTranslationLabel"
                               Text="Rueckuebersetzung:"
                               FontSize="13"
                               TextColor="#888"/>
                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 10" Stroke="Transparent" Padding="12">
                            <Label x:Name="PreviewBackLabel"
                                   FontSize="15"
                                   TextColor="#333"
                                   FontAttributes="Italic"/>
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
                </ScrollView>
            </Border>
        </Grid>

        <!-- Dropdown Menu Overlay -->
        <Grid x:Name="MenuOverlayGrid"
              Grid.RowSpan="4"
              IsVisible="False"
              ZIndex="1000">

            <!-- Background tap to close -->
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <!-- Menu dropdown -->
            <Border StrokeShape="RoundRectangle 12"
                    Stroke="Transparent"
                    Padding="0"
                    Margin="60,95,60,0"
                    VerticalOptions="Start">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2196F3" Offset="0"/>
                        <GradientStop Color="#1976D2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Shadow>
                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.3"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="0">
                    <Button x:Name="MenuTodayButton"
                            Text="ðŸ  Heute"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuTodayClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuChatButton"
                            Text="ðŸ’¬ Chat"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuChatClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuMyTasksButton"
                            Text="ðŸ“‹ Neue Aufgabe"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuMyTasksClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuSettingsButton"
                            Text="âš™ï¸ Einstellungen"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuSettingsClicked"/>
                </VerticalStackLayout>
            </Border>
        </Grid>

    </Grid>
</ContentPage>

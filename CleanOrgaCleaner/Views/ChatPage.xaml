<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.ChatPage"
             Title="Chat"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <!-- Main container Grid for overlays -->
    <Grid>

        <!-- Main Content -->
        <VerticalStackLayout>

            <!-- Header -->
            <Grid Padding="15,45,15,15" BackgroundColor="#2196F3">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <HorizontalStackLayout Grid.Column="0" Spacing="6" VerticalOptions="Center">
                        <Image Source="logo.jpg" WidthRequest="28" HeightRequest="28">
                            <Image.Clip>
                                <EllipseGeometry Center="14,14" RadiusX="14" RadiusY="14"/>
                            </Image.Clip>
                        </Image>
                        <Label Text="CleanOrga" FontSize="16" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <Button Grid.Column="1" x:Name="MenuButton" Text="Chat"
                            BackgroundColor="#1565C0" TextColor="White" FontSize="13"
                            CornerRadius="8" Padding="10,6" HorizontalOptions="Center"
                            Clicked="OnMenuButtonClicked"/>

                    <Button Grid.Column="2" x:Name="LogoutButton" Text="Logout"
                            BackgroundColor="#1565C0" TextColor="White" FontSize="13"
                            CornerRadius="8" Padding="10,6" Clicked="OnLogoutClicked"/>
                </Grid>
            </Grid>

            <!-- Offline Banner -->
            <Frame x:Name="OfflineBanner" BackgroundColor="#ff9800" Padding="10" IsVisible="False" Margin="0">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                    <Label Text="Offline" TextColor="White" FontSize="13"/>
                    <ActivityIndicator x:Name="OfflineSpinner" IsRunning="True" Color="White" WidthRequest="16" HeightRequest="16"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Messages -->
            <CollectionView x:Name="MessagesCollection"
                            VerticalOptions="FillAndExpand"
                            Margin="10,5,10,5"
                            ItemsUpdatingScrollMode="KeepLastItemInView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="3,2">
                            <!-- Eigene Nachrichten rechts (grün) -->
                            <Frame Padding="10" CornerRadius="12" MaximumWidthRequest="280"
                                   BackgroundColor="#dcf8c6" BorderColor="#25D366"
                                   HorizontalOptions="End"
                                   IsVisible="{Binding FromCurrentUser}">
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="{Binding DisplayText}" FontSize="14" TextColor="#333" LineBreakMode="WordWrap"/>
                                    <Label Text="{Binding DatumZeit}" FontSize="9" TextColor="#666" HorizontalOptions="End"/>
                                </VerticalStackLayout>
                            </Frame>
                            <!-- Nachrichten von anderen links (weiß) -->
                            <Frame Padding="10" CornerRadius="12" MaximumWidthRequest="280"
                                   BackgroundColor="White" BorderColor="#ccc"
                                   HorizontalOptions="Start"
                                   IsVisible="{Binding IsFromOther}">
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="{Binding DisplayText}" FontSize="14" TextColor="#333" LineBreakMode="WordWrap"/>
                                    <Label Text="{Binding OriginalText, StringFormat='(Original: {0})'}"
                                           FontSize="9" TextColor="#888" FontAttributes="Italic"
                                           IsVisible="{Binding HasTranslation}"/>
                                    <Label Text="{Binding DatumZeit}" FontSize="9" TextColor="#666" HorizontalOptions="End"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="Noch keine Nachrichten" FontSize="16" TextColor="#999"
                           HorizontalOptions="Center" VerticalOptions="Center" Margin="0,50,0,0"/>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- INPUT AREA -->
            <Grid BackgroundColor="White" Padding="10" HeightRequest="60"
                  ColumnDefinitions="40,*,40,40" ColumnSpacing="8">
                <Button Grid.Column="0" x:Name="BackButton" Text="←" FontSize="16"
                        BackgroundColor="#666" TextColor="White" CornerRadius="20"
                        WidthRequest="40" HeightRequest="40" Clicked="OnCancelClicked"/>

                <Entry Grid.Column="1" x:Name="MessageEntry" Placeholder="Nachricht..." FontSize="14"
                       BackgroundColor="#f0f0f0" VerticalOptions="Center" HeightRequest="40"/>

                <Button Grid.Column="2" x:Name="SendButton" Text="➤" FontSize="16"
                        BackgroundColor="#25D366" TextColor="White" CornerRadius="20"
                        WidthRequest="40" HeightRequest="40" Clicked="OnSendClicked"/>

                <Button Grid.Column="3" x:Name="PreviewButton" Text="T" FontSize="14"
                        BackgroundColor="#2196F3" TextColor="White" CornerRadius="20"
                        WidthRequest="40" HeightRequest="40" Clicked="OnPreviewClicked"/>
            </Grid>

        </VerticalStackLayout>

        <!-- TRANSLATION POPUP OVERLAY -->
        <Grid x:Name="TranslationPreview" IsVisible="False" BackgroundColor="#80000000" ZIndex="100">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnClosePreviewClicked"/>
            </Grid.GestureRecognizers>

            <Frame BackgroundColor="#fff3e0" BorderColor="#e65100" CornerRadius="15"
                   Padding="15" Margin="20" VerticalOptions="Center" HorizontalOptions="Fill">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label x:Name="TranslationPreviewTitle" Text="Uebersetzung" FontSize="16"
                               FontAttributes="Bold" TextColor="#e65100"/>
                        <Button Grid.Column="1" Text="X" FontSize="14"
                                BackgroundColor="#e65100" TextColor="White"
                                CornerRadius="12" WidthRequest="28" HeightRequest="28"
                                Padding="0" Clicked="OnClosePreviewClicked"/>
                    </Grid>

                    <Label x:Name="YourTextLabel" Text="Dein Text:" FontSize="12" TextColor="#666"/>
                    <Frame BackgroundColor="White" Padding="8" CornerRadius="6">
                        <Label x:Name="PreviewOriginalLabel" FontSize="13" TextColor="#333"/>
                    </Frame>

                    <Label x:Name="TranslationForAdminLabel" Text="Uebersetzung:" FontSize="12" TextColor="#666"/>
                    <Frame BackgroundColor="White" Padding="8" CornerRadius="6">
                        <Label x:Name="PreviewTranslatedLabel" FontSize="13" TextColor="#333" FontAttributes="Bold"/>
                    </Frame>

                    <Label x:Name="BackTranslationLabel" Text="Rueckuebersetzung:" FontSize="12" TextColor="#666"/>
                    <Frame BackgroundColor="White" Padding="8" CornerRadius="6">
                        <Label x:Name="PreviewBackLabel" FontSize="13" TextColor="#333" FontAttributes="Italic"/>
                    </Frame>
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <!-- MENU OVERLAY -->
        <Grid x:Name="MenuOverlayGrid" IsVisible="False" BackgroundColor="#80000000" ZIndex="101">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped"/>
            </Grid.GestureRecognizers>

            <Frame BackgroundColor="#2196F3" CornerRadius="12" Padding="0"
                   Margin="50,100,50,0" VerticalOptions="Start" HorizontalOptions="Fill">
                <VerticalStackLayout>
                    <Button x:Name="MenuTodayButton" Text="Heute" BackgroundColor="Transparent"
                            TextColor="White" FontSize="15" Padding="15,12" Clicked="OnMenuTodayClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuChatButton" Text="Chat" BackgroundColor="Transparent"
                            TextColor="White" FontSize="15" Padding="15,12" Clicked="OnMenuChatClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuMyTasksButton" Text="Neue Aufgabe" BackgroundColor="Transparent"
                            TextColor="White" FontSize="15" Padding="15,12" Clicked="OnMenuMyTasksClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuSettingsButton" Text="Einstellungen" BackgroundColor="Transparent"
                            TextColor="White" FontSize="15" Padding="15,12" Clicked="OnMenuSettingsClicked"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>

    </Grid>

</ContentPage>

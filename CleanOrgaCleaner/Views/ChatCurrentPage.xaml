<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:CleanOrgaCleaner.Views.Components"
             x:Class="CleanOrgaCleaner.Views.ChatCurrentPage"
             Title="Chat"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- AppHeader Component -->
        <components:AppHeader x:Name="Header" Grid.Row="0"/>

        <!-- Content -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*">

            <!-- Partner Header -->
            <Border Grid.Row="0" BackgroundColor="White" Padding="15,12" Margin="15,10,15,5"
                    StrokeShape="RoundRectangle 15" Stroke="Transparent">
                <Border.Shadow>
                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.15"/>
                </Border.Shadow>
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                    <Border x:Name="PartnerAvatar" WidthRequest="45" HeightRequest="45"
                            StrokeShape="RoundRectangle 22" Stroke="Transparent">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#667eea" Offset="0"/>
                                <GradientStop Color="#764ba2" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Label x:Name="PartnerInitial" Text="A" TextColor="White" FontSize="18"
                               FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Border>
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                        <Label x:Name="PartnerNameLabel" Text="Admin" FontSize="18" FontAttributes="Bold" TextColor="#333"/>
                        <Label x:Name="PartnerStatusLabel" Text="" FontSize="13" TextColor="#888"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Messages List -->
            <CollectionView x:Name="MessagesCollection" Grid.Row="1"
                            Margin="10,5,10,130"
                            ItemsUpdatingScrollMode="KeepLastItemInView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="3,2">
                            <!-- Eigene Nachrichten rechts -->
                            <Border Padding="10" StrokeShape="RoundRectangle 12"
                                   BackgroundColor="#dcf8c6" Stroke="#25D366"
                                   HorizontalOptions="End" MaximumWidthRequest="280"
                                   IsVisible="{Binding FromCurrentUser}">
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="{Binding DisplayText}" FontSize="14" TextColor="#333" LineBreakMode="WordWrap"/>
                                    <Label Text="{Binding DatumZeit}" FontSize="9" TextColor="#666" HorizontalOptions="End"/>
                                </VerticalStackLayout>
                            </Border>
                            <!-- Nachrichten von anderen links -->
                            <Border Padding="10" StrokeShape="RoundRectangle 12"
                                   BackgroundColor="White" Stroke="#ccc"
                                   HorizontalOptions="Start" MaximumWidthRequest="280"
                                   IsVisible="{Binding IsFromOther}">
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="{Binding DisplayText}" FontSize="14" TextColor="#333" LineBreakMode="WordWrap"/>
                                    <Label Text="{Binding OriginalText, StringFormat='(Original: {0})'}"
                                           FontSize="9" TextColor="#888" FontAttributes="Italic"
                                           IsVisible="{Binding HasTranslation}"/>
                                    <Label Text="{Binding DatumZeit}" FontSize="9" TextColor="#666" HorizontalOptions="End"/>
                                </VerticalStackLayout>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="Noch keine Nachrichten" FontSize="16" TextColor="#999"
                           HorizontalOptions="Center" VerticalOptions="Center" Margin="0,50,0,0"/>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- Input Area - fixed at bottom -->
            <VerticalStackLayout Grid.Row="1" VerticalOptions="End" BackgroundColor="White">
                <Grid Padding="10" HeightRequest="60"
                      ColumnDefinitions="40,*,40,40" ColumnSpacing="8">
                    <Button Grid.Column="0" x:Name="BackButton" Text="&#x2190;" FontSize="16"
                            BackgroundColor="#666" TextColor="White" CornerRadius="20"
                            WidthRequest="40" HeightRequest="40" Clicked="OnBackClicked"/>

                    <Entry Grid.Column="1" x:Name="MessageEntry" Placeholder="Nachricht..." FontSize="14"
                           BackgroundColor="#f0f0f0" VerticalOptions="Center" HeightRequest="40"/>

                    <Button Grid.Column="2" x:Name="SendButton" Text="&#x27A4;" FontSize="16"
                            BackgroundColor="#25D366" TextColor="White" CornerRadius="20"
                            WidthRequest="40" HeightRequest="40" Clicked="OnSendClicked"/>

                    <Button Grid.Column="3" x:Name="PreviewButton" Text="T" FontSize="14"
                            BackgroundColor="#2196F3" TextColor="White" CornerRadius="20"
                            WidthRequest="40" HeightRequest="40" Clicked="OnPreviewClicked"/>
                </Grid>
                <!-- Spacer below input to push it up -->
                <BoxView HeightRequest="60" BackgroundColor="White"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Translation Preview Overlay -->
        <Grid Grid.RowSpan="2" x:Name="TranslationPreview" IsVisible="False" BackgroundColor="#80000000" ZIndex="100">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnClosePreviewClicked"/>
            </Grid.GestureRecognizers>

            <Border BackgroundColor="#fff3e0" Stroke="#e65100" StrokeShape="RoundRectangle 15"
                   Padding="15" Margin="20" VerticalOptions="Center" HorizontalOptions="Fill">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label x:Name="TranslationPreviewTitle" Text="Uebersetzung" FontSize="16"
                               FontAttributes="Bold" TextColor="#e65100"/>
                        <Button Grid.Column="1" Text="X" FontSize="14"
                                BackgroundColor="#e65100" TextColor="White"
                                CornerRadius="12" WidthRequest="28" HeightRequest="28"
                                Padding="0" Clicked="OnClosePreviewClicked"/>
                    </Grid>

                    <Label x:Name="YourTextLabel" Text="Dein Text:" FontSize="12" TextColor="#666"/>
                    <Border BackgroundColor="White" Padding="8" StrokeShape="RoundRectangle 6">
                        <Label x:Name="PreviewOriginalLabel" FontSize="13" TextColor="#333"/>
                    </Border>

                    <Label x:Name="TranslationForAdminLabel" Text="Uebersetzung:" FontSize="12" TextColor="#666"/>
                    <Border BackgroundColor="White" Padding="8" StrokeShape="RoundRectangle 6">
                        <Label x:Name="PreviewTranslatedLabel" FontSize="13" TextColor="#333" FontAttributes="Bold"/>
                    </Border>

                    <Label x:Name="BackTranslationLabel" Text="Rueckuebersetzung:" FontSize="12" TextColor="#666"/>
                    <Border BackgroundColor="White" Padding="8" StrokeShape="RoundRectangle 6">
                        <Label x:Name="PreviewBackLabel" FontSize="13" TextColor="#333" FontAttributes="Italic"/>
                    </Border>
                </VerticalStackLayout>
            </Border>
        </Grid>

    </Grid>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.ChatCurrentPage"
             Title="Chat"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <!-- EXACT same structure as ChatListPage: Auto,* -->
    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Grid.Row="0" Padding="15,45,15,15" RowDefinitions="Auto,Auto" BackgroundColor="#1a3a5c">

            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
                <!-- App Name - Tappable to go to Today -->
                <Label Grid.Column="0"
                       Text="CleanOrga"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#4a9eff"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLogoTapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <!-- Hamburger Menu Button (centered) -->
                <Button Grid.Column="1"
                        x:Name="MenuButton"
                        Text="&#x2261;"
                        BackgroundColor="#0078D4"
                        TextColor="White"
                        FontSize="18"
                        CornerRadius="8"
                        Padding="12,6"
                        HorizontalOptions="Center"
                        Clicked="OnMenuButtonClicked"/>

                <!-- Logout Button (compact) -->
                <Button Grid.Column="2"
                        x:Name="LogoutButton"
                        Text="Abmelden"
                        BackgroundColor="#0078D4"
                        TextColor="White"
                        FontSize="13"
                        CornerRadius="8"
                        Padding="10,6"
                        Clicked="OnLogoutClicked"/>
            </Grid>

            <!-- Row 1: Current Page and User Info -->
            <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,8,0,0">
                <Label Grid.Column="0"
                       x:Name="PageTitleLabel"
                       Text=""
                       FontSize="13"
                       TextColor="White"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <Label Grid.Column="1"
                       x:Name="UserInfoLabel"
                       Text=""
                       FontSize="13"
                       TextColor="#4a9eff"/>
            </Grid>
        </Grid>

        <!-- Content - Row 1 fills ALL remaining space -->
        <Grid Grid.Row="1">

            <!-- Offline Banner (overlay at top) -->
            <Frame x:Name="OfflineBanner" BackgroundColor="#ff9800" Padding="10" IsVisible="False"
                   VerticalOptions="Start" Margin="0" ZIndex="50">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                    <Label Text="Offline" TextColor="White" FontSize="13"/>
                    <ActivityIndicator x:Name="OfflineSpinner" IsRunning="True" Color="White" WidthRequest="16" HeightRequest="16"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Messages List -->
            <CollectionView x:Name="MessagesCollection"
                            Margin="10,5,10,130"
                            ItemsUpdatingScrollMode="KeepLastItemInView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="3,2">
                            <!-- Eigene Nachrichten rechts -->
                            <Border Padding="10" StrokeShape="RoundRectangle 12"
                                   BackgroundColor="#dcf8c6" Stroke="#25D366"
                                   HorizontalOptions="End" MaximumWidthRequest="280"
                                   IsVisible="{Binding FromCurrentUser}">
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="{Binding DisplayText}" FontSize="14" TextColor="#333" LineBreakMode="WordWrap"/>
                                    <Label Text="{Binding DatumZeit}" FontSize="9" TextColor="#666" HorizontalOptions="End"/>
                                </VerticalStackLayout>
                            </Border>
                            <!-- Nachrichten von anderen links -->
                            <Border Padding="10" StrokeShape="RoundRectangle 12"
                                   BackgroundColor="White" Stroke="#ccc"
                                   HorizontalOptions="Start" MaximumWidthRequest="280"
                                   IsVisible="{Binding IsFromOther}">
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="{Binding DisplayText}" FontSize="14" TextColor="#333" LineBreakMode="WordWrap"/>
                                    <Label Text="{Binding OriginalText, StringFormat='(Original: {0})'}"
                                           FontSize="9" TextColor="#888" FontAttributes="Italic"
                                           IsVisible="{Binding HasTranslation}"/>
                                    <Label Text="{Binding DatumZeit}" FontSize="9" TextColor="#666" HorizontalOptions="End"/>
                                </VerticalStackLayout>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="Noch keine Nachrichten" FontSize="16" TextColor="#999"
                           HorizontalOptions="Center" VerticalOptions="Center" Margin="0,50,0,0"/>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- Input Area - fixed at bottom -->
            <VerticalStackLayout VerticalOptions="End" BackgroundColor="White">
                <Grid Padding="10" HeightRequest="60"
                      ColumnDefinitions="40,*,40,40" ColumnSpacing="8">
                    <Button Grid.Column="0" x:Name="BackButton" Text="←" FontSize="16"
                            BackgroundColor="#666" TextColor="White" CornerRadius="20"
                            WidthRequest="40" HeightRequest="40" Clicked="OnBackClicked"/>

                    <Entry Grid.Column="1" x:Name="MessageEntry" Placeholder="Nachricht..." FontSize="14"
                           BackgroundColor="#f0f0f0" VerticalOptions="Center" HeightRequest="40"/>

                    <Button Grid.Column="2" x:Name="SendButton" Text="➤" FontSize="16"
                            BackgroundColor="#25D366" TextColor="White" CornerRadius="20"
                            WidthRequest="40" HeightRequest="40" Clicked="OnSendClicked"/>

                    <Button Grid.Column="3" x:Name="PreviewButton" Text="T" FontSize="14"
                            BackgroundColor="#2196F3" TextColor="White" CornerRadius="20"
                            WidthRequest="40" HeightRequest="40" Clicked="OnPreviewClicked"/>
                </Grid>
                <!-- Spacer below input to push it up -->
                <BoxView HeightRequest="60" BackgroundColor="White"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Translation Preview Overlay -->
        <Grid Grid.RowSpan="2" x:Name="TranslationPreview" IsVisible="False" BackgroundColor="#80000000" ZIndex="100">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnClosePreviewClicked"/>
            </Grid.GestureRecognizers>

            <Border BackgroundColor="#fff3e0" Stroke="#e65100" StrokeShape="RoundRectangle 15"
                   Padding="15" Margin="20" VerticalOptions="Center" HorizontalOptions="Fill">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label x:Name="TranslationPreviewTitle" Text="Uebersetzung" FontSize="16"
                               FontAttributes="Bold" TextColor="#e65100"/>
                        <Button Grid.Column="1" Text="X" FontSize="14"
                                BackgroundColor="#e65100" TextColor="White"
                                CornerRadius="12" WidthRequest="28" HeightRequest="28"
                                Padding="0" Clicked="OnClosePreviewClicked"/>
                    </Grid>

                    <Label x:Name="YourTextLabel" Text="Dein Text:" FontSize="12" TextColor="#666"/>
                    <Border BackgroundColor="White" Padding="8" StrokeShape="RoundRectangle 6">
                        <Label x:Name="PreviewOriginalLabel" FontSize="13" TextColor="#333"/>
                    </Border>

                    <Label x:Name="TranslationForAdminLabel" Text="Uebersetzung:" FontSize="12" TextColor="#666"/>
                    <Border BackgroundColor="White" Padding="8" StrokeShape="RoundRectangle 6">
                        <Label x:Name="PreviewTranslatedLabel" FontSize="13" TextColor="#333" FontAttributes="Bold"/>
                    </Border>

                    <Label x:Name="BackTranslationLabel" Text="Rueckuebersetzung:" FontSize="12" TextColor="#666"/>
                    <Border BackgroundColor="White" Padding="8" StrokeShape="RoundRectangle 6">
                        <Label x:Name="PreviewBackLabel" FontSize="13" TextColor="#333" FontAttributes="Italic"/>
                    </Border>
                </VerticalStackLayout>
            </Border>
        </Grid>

        <!-- Menu Overlay - IDENTICAL to ChatListPage -->
        <Grid x:Name="MenuOverlayGrid"
              Grid.RowSpan="2"
              IsVisible="False"
              ZIndex="1000">

            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <Border StrokeShape="RoundRectangle 12"
                    Stroke="Transparent"
                    Padding="0"
                    Margin="60,95,60,0"
                    VerticalOptions="Start"
                    BackgroundColor="#1a3a5c">
                <Border.Shadow>
                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.3"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="0">
                    <Border BackgroundColor="#1a3a5c" Padding="20,15" HorizontalOptions="Fill">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMenuTodayClicked"/>
                        </Border.GestureRecognizers>
                        <Label x:Name="MenuTodayLabel" Text="Heute" TextColor="White" FontSize="16" HorizontalOptions="Center"/>
                    </Border>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Border BackgroundColor="#1a3a5c" Padding="20,15" HorizontalOptions="Fill">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMenuChatsClicked"/>
                        </Border.GestureRecognizers>
                        <Label x:Name="MenuChatLabel" Text="Chat" TextColor="White" FontSize="16" HorizontalOptions="Center"/>
                    </Border>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Border BackgroundColor="#1a3a5c" Padding="20,15" HorizontalOptions="Fill">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMenuAuftragClicked"/>
                        </Border.GestureRecognizers>
                        <Label x:Name="MenuAuftragLabel" Text="Auftrag" TextColor="White" FontSize="16" HorizontalOptions="Center"/>
                    </Border>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Border BackgroundColor="#1a3a5c" Padding="20,15" HorizontalOptions="Fill">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMenuSettingsClicked"/>
                        </Border.GestureRecognizers>
                        <Label x:Name="MenuSettingsLabel" Text="Einstellungen" TextColor="White" FontSize="16" HorizontalOptions="Center"/>
                    </Border>
                </VerticalStackLayout>
            </Border>
        </Grid>

    </Grid>

</ContentPage>

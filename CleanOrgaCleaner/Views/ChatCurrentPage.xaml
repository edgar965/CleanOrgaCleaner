<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:CleanOrgaCleaner.Views.Components"
             x:Class="CleanOrgaCleaner.Views.ChatCurrentPage"
             Title="Chat"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- AppHeader Component -->
        <components:AppHeader x:Name="Header" Grid.Row="0"/>

        <!-- Content -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*">

            <!-- Partner Header mit Avatar und Delete Button -->
            <Border Grid.Row="0" BackgroundColor="White" Padding="15,12" Margin="15,10,15,5"
                    StrokeShape="RoundRectangle 15" Stroke="Transparent">
                <Border.Shadow>
                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.15"/>
                </Border.Shadow>
                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                    <!-- Avatar -->
                    <Border x:Name="PartnerAvatar" WidthRequest="45" HeightRequest="45"
                            StrokeShape="RoundRectangle 22" Stroke="Transparent">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#667eea" Offset="0"/>
                                <GradientStop Color="#764ba2" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Label x:Name="PartnerInitial" Text="A" TextColor="White" FontSize="18"
                               FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Border>
                    <!-- Name und Status -->
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                        <Label x:Name="PartnerNameLabel" Text="Admin" FontSize="18" FontAttributes="Bold" TextColor="#333"/>
                        <Label x:Name="PartnerStatusLabel" Text="" FontSize="13" TextColor="#888"/>
                    </VerticalStackLayout>
                    <!-- Delete Button -->
                    <Button Grid.Column="2" x:Name="DeleteChatButton" Text="ðŸ—‘ï¸" FontSize="18"
                            BackgroundColor="#ff5252" TextColor="White" CornerRadius="20"
                            WidthRequest="40" HeightRequest="40" Padding="0"
                            Clicked="OnDeleteChatClicked"/>
                </Grid>
            </Border>

            <!-- Messages List -->
            <CollectionView x:Name="MessagesCollection" Grid.Row="1"
                            Margin="10,5,10,150"
                            ItemsUpdatingScrollMode="KeepLastItemInView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="3,2">
                            <!-- Eigene Nachrichten rechts - Delete-Button LINKS auÃŸerhalb -->
                            <Grid HorizontalOptions="End" IsVisible="{Binding FromCurrentUser}"
                                  ColumnDefinitions="Auto,Auto" ColumnSpacing="4">
                                <!-- Delete button LINKS vom Rahmen (nur bei Bild) -->
                                <Button Grid.Column="0" Text="âœ•" FontSize="12"
                                        BackgroundColor="#ff5252" TextColor="White"
                                        CornerRadius="12" WidthRequest="24" HeightRequest="24"
                                        Padding="0" VerticalOptions="Start" Margin="0,10,0,0"
                                        IsVisible="{Binding HasPhotoVideo}"
                                        CommandParameter="{Binding Id}"
                                        Clicked="OnDeleteMessageImageClicked"/>
                                <!-- Message Border -->
                                <Border Grid.Column="1" Padding="10" StrokeShape="RoundRectangle 12"
                                       BackgroundColor="#dcf8c6" Stroke="#25D366"
                                       MaximumWidthRequest="280">
                                    <VerticalStackLayout Spacing="3">
                                        <!-- Original text (was ich geschrieben habe) -->
                                        <Label Text="{Binding Text}" FontSize="14" TextColor="#333" LineBreakMode="WordWrap"
                                               IsVisible="{Binding HasText}"/>
                                        <!-- Foto/Video falls vorhanden -->
                                        <Image Source="{Binding LinkPhotoVideoUrl}" Aspect="AspectFit"
                                               MaximumWidthRequest="200" MaximumHeightRequest="200"
                                               IsVisible="{Binding HasPhotoVideo}">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenImageCommand}"
                                                                      CommandParameter="{Binding LinkPhotoVideo}"/>
                                            </Image.GestureRecognizers>
                                        </Image>
                                        <!-- Ãœbersetzung die EmpfÃ¤nger sieht (mit Globe icon) -->
                                        <Label FontSize="12" TextColor="#666" LineBreakMode="WordWrap" IsVisible="{Binding HasTranslation}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="ðŸŒ "/>
                                                    <Span Text="{Binding SecondaryText}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label Text="{Binding DatumZeit}" FontSize="9" TextColor="#666" HorizontalOptions="End"/>
                                    </VerticalStackLayout>
                                </Border>
                            </Grid>
                            <!-- Nachrichten von anderen links - Delete-Button RECHTS auÃŸerhalb -->
                            <Grid HorizontalOptions="Start" IsVisible="{Binding IsFromOther}"
                                  ColumnDefinitions="Auto,Auto" ColumnSpacing="4">
                                <!-- Message Border -->
                                <Border Grid.Column="0" Padding="10" StrokeShape="RoundRectangle 12"
                                       BackgroundColor="White" Stroke="#ccc"
                                       MaximumWidthRequest="280">
                                    <VerticalStackLayout Spacing="3">
                                        <!-- Ãœbersetzung in meiner Sprache -->
                                        <Label Text="{Binding DisplayText}" FontSize="14" TextColor="#333" LineBreakMode="WordWrap"
                                               IsVisible="{Binding HasText}"/>
                                        <!-- Foto/Video falls vorhanden -->
                                        <Image Source="{Binding LinkPhotoVideoUrl}" Aspect="AspectFit"
                                               MaximumWidthRequest="200" MaximumHeightRequest="200"
                                               IsVisible="{Binding HasPhotoVideo}">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenImageCommand}"
                                                                      CommandParameter="{Binding LinkPhotoVideo}"/>
                                            </Image.GestureRecognizers>
                                        </Image>
                                        <!-- Original des Senders (mit Globe Icon) -->
                                        <Label FontSize="12" TextColor="#888" LineBreakMode="WordWrap" IsVisible="{Binding HasTranslation}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="ðŸŒ " FontAttributes="None"/>
                                                    <Span Text="{Binding SecondaryText}" FontAttributes="Italic"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label Text="{Binding DatumZeit}" FontSize="9" TextColor="#666" HorizontalOptions="End"/>
                                    </VerticalStackLayout>
                                </Border>
                                <!-- Delete button RECHTS vom Rahmen (nur bei Bild) -->
                                <Button Grid.Column="1" Text="âœ•" FontSize="12"
                                        BackgroundColor="#ff5252" TextColor="White"
                                        CornerRadius="12" WidthRequest="24" HeightRequest="24"
                                        Padding="0" VerticalOptions="Start" Margin="0,10,0,0"
                                        IsVisible="{Binding HasPhotoVideo}"
                                        CommandParameter="{Binding Id}"
                                        Clicked="OnDeleteMessageImageClicked"/>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="Noch keine Nachrichten" FontSize="16" TextColor="#999"
                           HorizontalOptions="Center" VerticalOptions="Center" Margin="0,50,0,0"/>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- Input Area - fixed at bottom -->
            <VerticalStackLayout Grid.Row="1" VerticalOptions="End" BackgroundColor="White">
                <!-- Image Preview (visible when image is selected) -->
                <Border x:Name="ImagePreviewContainer" IsVisible="False" BackgroundColor="#f5f5f5"
                        Padding="10" Margin="10,5,10,0" StrokeShape="RoundRectangle 10" Stroke="#e0e0e0">
                    <Grid ColumnDefinitions="70,*,Auto,Auto" ColumnSpacing="10">
                        <Image x:Name="PreviewImage" WidthRequest="60" HeightRequest="60"
                               Aspect="AspectFill" VerticalOptions="Center"/>
                        <Label Grid.Column="1" Text="Bild ausgewÃ¤hlt" FontSize="12" TextColor="#666"
                               VerticalOptions="Center"/>
                        <Button Grid.Column="2" x:Name="AnnotateImageButton" Text="âœŽ" FontSize="14"
                                BackgroundColor="#2196F3" TextColor="White" CornerRadius="18"
                                WidthRequest="36" HeightRequest="36" Padding="0"
                                Clicked="OnAnnotateImageClicked"/>
                        <Button Grid.Column="3" x:Name="RemoveImageButton" Text="âœ•" FontSize="14"
                                BackgroundColor="#ff5252" TextColor="White" CornerRadius="18"
                                WidthRequest="36" HeightRequest="36" Padding="0"
                                Clicked="OnRemoveImageClicked"/>
                    </Grid>
                </Border>
                <Grid Padding="10" HeightRequest="60"
                      ColumnDefinitions="40,40,*,40,40,40" ColumnSpacing="8">
                    <Button Grid.Column="0" x:Name="BackButton" Text="&#x2190;" FontSize="16"
                            BackgroundColor="#666" TextColor="White" CornerRadius="20"
                            WidthRequest="40" HeightRequest="40" Clicked="OnBackClicked"/>

                    <Button Grid.Column="1" x:Name="PhotoButton" Text="ðŸ“·" FontSize="16"
                            BackgroundColor="#4CAF50" TextColor="White" CornerRadius="20"
                            WidthRequest="40" HeightRequest="40" Clicked="OnPhotoClicked"/>

                    <Entry Grid.Column="2" x:Name="MessageEntry" Placeholder="Nachricht..." FontSize="14"
                           BackgroundColor="#f0f0f0" VerticalOptions="Center" HeightRequest="40"/>

                    <Button Grid.Column="3" x:Name="SendButton" Text="&#x27A4;" FontSize="16"
                            BackgroundColor="#25D366" TextColor="White" CornerRadius="20"
                            WidthRequest="40" HeightRequest="40" Clicked="OnSendClicked"/>

                    <Button Grid.Column="4" x:Name="PreviewButton" Text="T" FontSize="14"
                            BackgroundColor="#2196F3" TextColor="White" CornerRadius="20"
                            WidthRequest="40" HeightRequest="40" Clicked="OnPreviewClicked"/>

                    <Button Grid.Column="5" x:Name="TtsButton" Text="&#x1F50A;" FontSize="14"
                            BackgroundColor="#FF9800" TextColor="White" CornerRadius="20"
                            WidthRequest="40" HeightRequest="40" Clicked="OnTtsClicked"/>
                </Grid>
                <!-- Spacer below input for navigation bar -->
                <BoxView HeightRequest="80" BackgroundColor="White"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Translation Preview Overlay -->
        <Grid Grid.RowSpan="2" x:Name="TranslationPreview" IsVisible="False" BackgroundColor="#80000000" ZIndex="100">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnClosePreviewClicked"/>
            </Grid.GestureRecognizers>

            <Border BackgroundColor="#fff3e0" Stroke="#e65100" StrokeShape="RoundRectangle 15"
                   Padding="15" Margin="20" VerticalOptions="Center" HorizontalOptions="Fill">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label x:Name="TranslationPreviewTitle" Text="Uebersetzung" FontSize="16"
                               FontAttributes="Bold" TextColor="#e65100"/>
                        <Button Grid.Column="1" Text="X" FontSize="14"
                                BackgroundColor="#e65100" TextColor="White"
                                CornerRadius="12" WidthRequest="28" HeightRequest="28"
                                Padding="0" Clicked="OnClosePreviewClicked"/>
                    </Grid>

                    <Label x:Name="YourTextLabel" Text="Dein Text:" FontSize="12" TextColor="#666"/>
                    <Border BackgroundColor="White" Padding="8" StrokeShape="RoundRectangle 6">
                        <Label x:Name="PreviewOriginalLabel" FontSize="13" TextColor="#333"/>
                    </Border>

                    <Label x:Name="TranslationForAdminLabel" Text="Uebersetzung:" FontSize="12" TextColor="#666"/>
                    <Border BackgroundColor="White" Padding="8" StrokeShape="RoundRectangle 6">
                        <Label x:Name="PreviewTranslatedLabel" FontSize="13" TextColor="#333" FontAttributes="Bold"/>
                    </Border>

                    <Label x:Name="BackTranslationLabel" Text="Rueckuebersetzung:" FontSize="12" TextColor="#666"/>
                    <Border BackgroundColor="White" Padding="8" StrokeShape="RoundRectangle 6">
                        <Label x:Name="PreviewBackLabel" FontSize="13" TextColor="#333" FontAttributes="Italic"/>
                    </Border>
                </VerticalStackLayout>
            </Border>
        </Grid>

    </Grid>

</ContentPage>

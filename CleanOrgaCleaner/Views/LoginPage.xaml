<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.LoginPage"
             BackgroundColor="#2196F3">

    <ScrollView>
        <VerticalStackLayout Padding="30,50,30,30" Spacing="20">

            <!-- Title -->
            <Label Text="CleanOrga"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>

            <!-- Logo -->
            <Image Source="logo_transparent.png" WidthRequest="80" HeightRequest="80" HorizontalOptions="Center"/>

            <!-- Subtitle -->
            <Label x:Name="SubtitleLabel" Text="Cleaning Management"
                   FontSize="16"
                   TextColor="White"
                   Opacity="0.8"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

            <!-- Login Form -->
            <Border BackgroundColor="White"
                    StrokeShape="RoundRectangle 20"
                    Stroke="Transparent"
                    Padding="25">
                <Border.Shadow>
                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.3"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="15">

                    <Label x:Name="PropertyIdLabel" Text="Property ID"
                           FontSize="14"
                           TextColor="#666"/>
                    <Entry x:Name="PropertyIdEntry"
                           Placeholder="z.B. 1"
                           Keyboard="Numeric"
                           FontSize="18"/>

                    <Label x:Name="UsernameLabel" Text="Username"
                           FontSize="14"
                           TextColor="#666"/>
                    <Entry x:Name="UsernameEntry"
                           Placeholder=""
                           FontSize="18"/>

                    <Label x:Name="PasswordLabel" Text="Password"
                           FontSize="14"
                           TextColor="#666"/>
                    <Entry x:Name="PasswordEntry"
                           Placeholder=""
                           IsPassword="True"
                           FontSize="18"/>

                    <!-- Auto-Login Checkbox -->
                    <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                        <CheckBox x:Name="RememberMeCheckbox" Color="#2196F3" IsChecked="True" />
                        <Label x:Name="RememberMeLabel" Text="Stay logged in"
                               TextColor="#666"
                               FontSize="14"
                               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnRememberMeLabelTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>

                    <Button x:Name="LoginButton"
                            Text="Login"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            FontSize="18"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="50"
                            Margin="0,10,0,0"
                            Clicked="OnLoginClicked"/>

                    <Label x:Name="ErrorLabel"
                           TextColor="Red"
                           FontSize="14"
                           HorizontalOptions="Center"
                           IsVisible="False"/>

                </VerticalStackLayout>
            </Border>

            <!-- Info Text direkt auf blauem Hintergrund -->
            <VerticalStackLayout Spacing="15" Margin="0,20,0,0">

                <!-- Enterprise App -->
                <VerticalStackLayout Spacing="2">
                    <Label x:Name="EnterpriseAppLabel" Text="Enterprise App:"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label x:Name="CredentialsInfoLabel" Text="Please get your login credentials from your administrator."
                           FontSize="13"
                           TextColor="White"
                           Opacity="0.85"/>
                </VerticalStackLayout>

                <!-- New Customers -->
                <VerticalStackLayout Spacing="2">
                    <Label x:Name="NewCustomersLabel" Text="New Customers:"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label x:Name="RegistrationInfoLabel" Text="Request registration via email: mail@schwanenburg.de"
                           FontSize="13"
                           TextColor="White"
                           Opacity="0.85"/>
                </VerticalStackLayout>

                <!-- Test Usage -->
                <VerticalStackLayout Spacing="2">
                    <Label x:Name="TestUsageLabel" Text="Test Usage:"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label x:Name="TestCredentialsLabel" Text="Property: 1  |  User: tom  |  Password: tom"
                           FontSize="13"
                           TextColor="White"
                           Opacity="0.85"/>
                </VerticalStackLayout>

            </VerticalStackLayout>

            <!-- Debug Log -->
            <Border BackgroundColor="#1a1a2e"
                    StrokeShape="RoundRectangle 10"
                    Stroke="Transparent"
                    Padding="10"
                    Margin="0,10,0,0">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Debug Log"
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="#00ff88"/>
                    <Label x:Name="DebugLogLabel"
                           Text=""
                           FontSize="10"
                           TextColor="#cccccc"
                           FontFamily="Courier New"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>

            <!-- Version -->
            <Label Text="v1.16 (Build 82)"
                   FontSize="12"
                   TextColor="White"
                   Opacity="0.6"
                   HorizontalOptions="Center"
                   Margin="0,20,0,40"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

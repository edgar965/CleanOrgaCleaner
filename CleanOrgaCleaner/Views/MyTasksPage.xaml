<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.MyTasksPage"
             x:Name="ThisPage"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Grid.Row="0" Padding="15,45,15,15">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2196F3" Offset="0"/>
                    <GradientStop Color="#1976D2" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 1: App Name, Menu Button, Logout -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,8">
                <HorizontalStackLayout Grid.Column="0" Spacing="6" VerticalOptions="Center">
                    <Image Source="logo.jpg" WidthRequest="28" HeightRequest="28">
                        <Image.Clip>
                            <EllipseGeometry Center="14,14" RadiusX="14" RadiusY="14"/>
                        </Image.Clip>
                    </Image>
                    <Label Text="CleanOrga" FontSize="16" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <Button Grid.Column="1"
                        x:Name="MenuButton"
                        Text="Neue Aufgabe"
                        BackgroundColor="#1565C0"
                        TextColor="White"
                        FontSize="13"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="10,6"
                        HorizontalOptions="Center"
                        Clicked="OnMenuButtonClicked"/>

                <Button Grid.Column="2"
                        x:Name="LogoutButton"
                        Text="Logout"
                        BackgroundColor="#1565C0"
                        TextColor="White"
                        FontSize="13"
                        CornerRadius="8"
                        Padding="10,6"
                        Clicked="OnLogoutClicked"/>
            </Grid>

            <!-- Row 2: New Task Button -->
            <Button Grid.Row="1"
                    x:Name="NewTaskButton"
                    Text="+ Neue Aufgabe erstellen"
                    BackgroundColor="White"
                    TextColor="#2196F3"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Clicked="OnNewTaskClicked"/>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1">
            <!-- Empty State -->
            <VerticalStackLayout x:Name="EmptyStateView"
                                 IsVisible="False"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Spacing="10">
                <Label x:Name="EmptyLabel" Text="Keine eigenen Aufgaben"
                       FontSize="16"
                       TextColor="#999"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Tasks List -->
            <RefreshView x:Name="TaskRefreshView" Refreshing="OnRefreshing" IsVisible="True">
                <CollectionView x:Name="TasksCollectionView" SelectionMode="Single" SelectionChanged="OnTaskSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="15,10,15,0" Padding="15" BackgroundColor="White" StrokeShape="RoundRectangle 12">
                                <Border.Shadow>
                                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.15"/>
                                </Border.Shadow>
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                                        <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" TextColor="#333"/>
                                        <Label FontSize="13" TextColor="#666">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding PlannedDate}"/>
                                                    <Span Text=" - "/>
                                                    <Span Text="{Binding ApartmentName}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </VerticalStackLayout>
                                    <Border Grid.Column="1"
                                            Padding="8,4"
                                            BackgroundColor="{Binding StatusColor}"
                                            StrokeShape="RoundRectangle 8"
                                            VerticalOptions="Center">
                                        <Label Text="{Binding StatusDisplay}" FontSize="11" TextColor="White"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </Grid>

        <!-- Dropdown Menu Overlay -->
        <Grid x:Name="MenuOverlayGrid"
              Grid.RowSpan="2"
              IsVisible="False"
              ZIndex="1000">

            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <Border StrokeShape="RoundRectangle 12"
                    Stroke="Transparent"
                    Padding="0"
                    Margin="60,95,60,0"
                    VerticalOptions="Start">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2196F3" Offset="0"/>
                        <GradientStop Color="#1976D2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Shadow>
                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.3"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="0">
                    <Button x:Name="MenuTodayBtn" Text="Heute" BackgroundColor="#2196F3" TextColor="White" FontSize="16" Padding="20,15" HorizontalOptions="Fill" Clicked="OnMenuTodayClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuChatBtn" Text="Chat" BackgroundColor="#2196F3" TextColor="White" FontSize="16" Padding="20,15" HorizontalOptions="Fill" Clicked="OnMenuChatClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuMyTasksBtn" Text="Neue Aufgabe" BackgroundColor="#2196F3" TextColor="White" FontSize="16" Padding="20,15" HorizontalOptions="Fill" Clicked="OnMenuMyTasksClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuSettingsBtn" Text="Einstellungen" BackgroundColor="#2196F3" TextColor="White" FontSize="16" Padding="20,15" HorizontalOptions="Fill" Clicked="OnMenuSettingsClicked"/>
                </VerticalStackLayout>
            </Border>
        </Grid>

        <!-- Task Edit Popup (Bottom Sheet Style) -->
        <Grid x:Name="TaskPopupOverlay"
              Grid.RowSpan="2"
              IsVisible="False"
              ZIndex="2000"
              BackgroundColor="#80000000">

            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPopupOverlayTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <Border StrokeShape="RoundRectangle 20,20,0,0"
                    Stroke="Transparent"
                    BackgroundColor="White"
                    Padding="0"
                    VerticalOptions="End"
                    Margin="0,80,0,0">
                <Border.Shadow><Shadow Brush="Black" Offset="0,-5" Radius="20" Opacity="0.3"/></Border.Shadow>

                <Grid RowDefinitions="Auto,Auto,*,Auto">
                    <Grid.Padding>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="iOS" Value="0,0,0,35"/>
                            <On Platform="Android" Value="0,0,0,50"/>
                        </OnPlatform>
                    </Grid.Padding>
                    <!-- Popup Header -->
                    <Grid Grid.Row="0" Padding="20,15,15,10" ColumnDefinitions="*,Auto">
                        <Label x:Name="PopupTitle" Grid.Column="0" Text="Neue Aufgabe" FontSize="18" FontAttributes="Bold"/>
                        <Button Grid.Column="1" Text="X" BackgroundColor="Transparent" TextColor="#999" FontSize="20" WidthRequest="40" HeightRequest="40" Clicked="OnClosePopupClicked"/>
                    </Grid>

                    <!-- Tabs -->
                    <HorizontalStackLayout Grid.Row="1" Spacing="0" Padding="0,0,0,5">
                        <Button x:Name="TabDetails" Text="Details" BackgroundColor="Transparent" TextColor="#2196F3" FontSize="13" FontAttributes="Bold" Padding="16,8" Clicked="OnTabDetailsClicked"/>
                        <Button x:Name="TabImages" Text="Bilder" BackgroundColor="Transparent" TextColor="#666" FontSize="13" Padding="16,8" Clicked="OnTabImagesClicked"/>
                        <Button x:Name="TabAssign" Text="Zuweisen" BackgroundColor="Transparent" TextColor="#666" FontSize="13" Padding="16,8" Clicked="OnTabAssignClicked"/>
                        <Button x:Name="TabStatus" Text="Status" BackgroundColor="Transparent" TextColor="#666" FontSize="13" Padding="12,8" Clicked="OnTabStatusClicked"/>
                    </HorizontalStackLayout>

                    <!-- Tab Contents (Scrollable) -->
                    <ScrollView Grid.Row="2" Padding="20,0" MaximumHeightRequest="400">
                        <Grid>
                            <!-- Details Tab -->
                            <VerticalStackLayout x:Name="DetailsTabContent" IsVisible="True" Spacing="12">
                                <VerticalStackLayout Spacing="4">
                                    <Label x:Name="LabelTaskName" Text="Aufgabenname *" FontSize="14" FontAttributes="Bold"/>
                                    <Entry x:Name="TaskNameEntry" Placeholder="Name" FontSize="16"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Spacing="4">
                                    <Label x:Name="LabelApartment" Text="Apartment" FontSize="14" FontAttributes="Bold"/>
                                    <Picker x:Name="ApartmentPicker" FontSize="16"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Spacing="4">
                                    <Label x:Name="LabelDate" Text="Datum *" FontSize="14" FontAttributes="Bold"/>
                                    <DatePicker x:Name="TaskDatePicker" FontSize="16"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Spacing="4">
                                    <Label x:Name="LabelTaskType" Text="Aufgabenart" FontSize="14" FontAttributes="Bold"/>
                                    <Picker x:Name="AufgabenartPicker" FontSize="16" SelectedIndexChanged="OnAufgabenartChanged"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Spacing="4">
                                    <Label x:Name="LabelHint" Text="Hinweis" FontSize="14" FontAttributes="Bold"/>
                                    <Editor x:Name="TaskHinweisEditor" Placeholder="Optionaler Hinweis..." FontSize="16" HeightRequest="60"/>
                                </VerticalStackLayout>
                            </VerticalStackLayout>

                            <!-- Assign Tab -->
                            <VerticalStackLayout x:Name="AssignTabContent" IsVisible="False" Spacing="10">
                                <Label x:Name="LabelAssignCleaners" Text="Cleaner zuweisen" FontSize="14" FontAttributes="Bold"/>
                                <!-- Manuell aufgebaut in C# wegen iOS-Bug -->
                                <VerticalStackLayout x:Name="CleanersList" Spacing="0"/>
                            </VerticalStackLayout>

                            <!-- Status Tab -->
                            <VerticalStackLayout x:Name="StatusTabContent" IsVisible="False" Spacing="10">
                                <Label x:Name="LabelSelectStatus" Text="Status waehlen" FontSize="14" FontAttributes="Bold"/>
                                <RadioButton x:Name="StatusImported" Content="Nicht zugewiesen" GroupName="Status" IsChecked="True"/>
                                <RadioButton x:Name="StatusAssigned" Content="Zugewiesen" GroupName="Status"/>
                                <RadioButton x:Name="StatusCleaned" Content="Geputzt" GroupName="Status"/>
                                <RadioButton x:Name="StatusChecked" Content="Gecheckt" GroupName="Status"/>
                            </VerticalStackLayout>

                            <!-- Images Tab -->
                            <VerticalStackLayout x:Name="ImagesTabContent" IsVisible="False" Spacing="10">
                                <Label x:Name="LabelImages" Text="Bilder" FontSize="14" FontAttributes="Bold"/>
                                <Label x:Name="ImagesCountLabel" Text="Keine Bilder" FontSize="12" TextColor="#666"/>
                                <FlexLayout x:Name="ImagesStack" Wrap="Wrap" JustifyContent="Start" AlignItems="Start" Direction="Row" MinimumHeightRequest="50"/>
                                <Button x:Name="AddImageButton" Text="Bild hinzufuegen" BackgroundColor="#2196F3" TextColor="White" FontSize="14" FontAttributes="Bold" CornerRadius="10" HeightRequest="45" Clicked="OnAddImageClicked"/>
                            </VerticalStackLayout>
                        </Grid>
                    </ScrollView>

                    <!-- Footer Buttons - Always visible -->
                    <VerticalStackLayout Grid.Row="3" Padding="15,10,15,0" Spacing="8">
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Button x:Name="BtnCancel" Grid.Column="0" Text="Abbrechen" BackgroundColor="#e0e0e0" TextColor="#666" FontSize="16" FontAttributes="Bold" CornerRadius="10" HeightRequest="50" Clicked="OnCancelClicked"/>
                            <Button x:Name="BtnSave" Grid.Column="1" Text="Speichern" TextColor="White" FontSize="16" FontAttributes="Bold" CornerRadius="10" HeightRequest="50" Clicked="OnSaveClicked">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#2196F3" Offset="0"/>
                                        <GradientStop Color="#1976D2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </Grid>
                        <Button x:Name="BtnDelete" Text="Aufgabe loeschen" BackgroundColor="White" TextColor="#f44336" BorderColor="#f44336" BorderWidth="2" FontSize="14" FontAttributes="Bold" CornerRadius="10" HeightRequest="45" Clicked="OnDeleteTaskClicked" IsVisible="False"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>
        </Grid>

        <!-- Image Add Popup -->
        <Grid x:Name="ImagePopupOverlay" IsVisible="False" BackgroundColor="#80000000" ZIndex="3000" Grid.RowSpan="2">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnImagePopupBackgroundTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border BackgroundColor="White" StrokeShape="RoundRectangle 20,20,0,0" Stroke="Transparent" Margin="0" VerticalOptions="End" MaximumWidthRequest="500">
                <Border.Shadow><Shadow Brush="Black" Offset="0,-5" Radius="20" Opacity="0.3"/></Border.Shadow>
                <Grid RowDefinitions="Auto,*,Auto">
                    <Grid.Padding>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="iOS" Value="0,0,0,35"/>
                            <On Platform="Android" Value="0,0,0,50"/>
                        </OnPlatform>
                    </Grid.Padding>
                    <!-- Header -->
                    <Grid Padding="20,15,15,10">
                        <Label x:Name="ImagePopupTitle" Text="Bild hinzufuegen" FontSize="20" FontAttributes="Bold" TextColor="#333" VerticalOptions="Center"/>
                        <Button Text="X" BackgroundColor="Transparent" TextColor="#999" FontSize="18" FontAttributes="Bold" WidthRequest="40" HeightRequest="40" HorizontalOptions="End" Clicked="OnCancelImageClicked"/>
                    </Grid>
                    <!-- Scrollable Content -->
                    <ScrollView Grid.Row="1" Padding="20,0,20,10" MaximumHeightRequest="350">
                        <VerticalStackLayout Spacing="15">
                            <VerticalStackLayout Spacing="8">
                                <Label x:Name="SelectImageLabel" Text="Bild auswaehlen" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                    <Button x:Name="ImageTakePhotoButton" Text="Kamera" BackgroundColor="#e0e0e0" TextColor="#333" CornerRadius="8" Clicked="OnImageTakePhotoClicked"/>
                                    <Button x:Name="ImagePickPhotoButton" Grid.Column="1" Text="Galerie" BackgroundColor="#e0e0e0" TextColor="#333" CornerRadius="8" Clicked="OnImagePickPhotoClicked"/>
                                </Grid>
                                <Border x:Name="ImagePreviewBorder" StrokeShape="RoundRectangle 12" Stroke="#e0e0e0" Padding="5" IsVisible="False" HorizontalOptions="Center">
                                    <Image x:Name="ImagePreviewImage" WidthRequest="150" HeightRequest="150" Aspect="AspectFill"/>
                                </Border>
                            </VerticalStackLayout>
                            <VerticalStackLayout Spacing="5">
                                <Label x:Name="ImageNoteLabel" Text="Notiz" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Editor x:Name="ImageNotizEditor" Placeholder="Optionale Notiz zum Bild..." HeightRequest="80" FontSize="15" BackgroundColor="#f5f5f5"/>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </ScrollView>
                    <!-- Footer Buttons - Always visible -->
                    <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="10" Padding="20,10,20,0">
                        <Button x:Name="SaveImageButton" Text="Speichern" BackgroundColor="#2196F3" TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnSaveImageClicked" IsEnabled="False"/>
                        <Button x:Name="CancelImageButton" Grid.Column="1" Text="Abbrechen" BackgroundColor="#f0f0f0" TextColor="#666" CornerRadius="12" HeightRequest="50" Clicked="OnCancelImageClicked"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Image Detail Popup -->
        <Grid x:Name="ImageDetailPopupOverlay" IsVisible="False" BackgroundColor="#80000000" ZIndex="3001" Grid.RowSpan="2">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnImageDetailPopupBackgroundTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Margin="20" VerticalOptions="Center" MaximumWidthRequest="500" MaximumHeightRequest="700">
                <Border.Shadow><Shadow Brush="Black" Offset="0,5" Radius="20" Opacity="0.3"/></Border.Shadow>
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Grid Padding="20,15,15,15" BackgroundColor="#2196F3">
                        <Label x:Name="ImageDetailTitle" Text="Bild Details" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                        <Button Text="X" BackgroundColor="#2196F3" TextColor="White" FontSize="18" FontAttributes="Bold" WidthRequest="40" HeightRequest="40" HorizontalOptions="End" Clicked="OnCloseImageDetailClicked"/>
                    </Grid>
                    <!-- Content -->
                    <ScrollView Grid.Row="1" Padding="20">
                        <VerticalStackLayout Spacing="15">
                            <Border StrokeShape="RoundRectangle 12" Stroke="#e0e0e0" HorizontalOptions="Center">
                                <Image x:Name="ImageDetailImage" WidthRequest="280" HeightRequest="280" Aspect="AspectFill"/>
                            </Border>
                            <Label x:Name="ImageDetailDatum" Text="" FontSize="12" TextColor="#999"/>
                            <VerticalStackLayout Spacing="5">
                                <Label x:Name="ImageDetailNoteLabel" Text="Notiz:" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Editor x:Name="ImageDetailNotizEditor" Placeholder="Notiz zum Bild..." HeightRequest="100" FontSize="15" BackgroundColor="#f5f5f5"/>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </ScrollView>
                    <!-- Footer Buttons -->
                    <Grid Grid.Row="2" Padding="15" ColumnDefinitions="*,*,*" ColumnSpacing="10" BackgroundColor="#f8f9fa">
                        <Button x:Name="DeleteImageButton" Text="Loeschen" BackgroundColor="White" TextColor="#f44336" BorderColor="#f44336" BorderWidth="2" FontAttributes="Bold" CornerRadius="10" HeightRequest="45" Clicked="OnDeleteImageDetailClicked"/>
                        <Button x:Name="CloseImageButton" Grid.Column="1" Text="Abbrechen" BackgroundColor="#e0e0e0" TextColor="#666" CornerRadius="10" HeightRequest="45" Clicked="OnCloseImageDetailClicked"/>
                        <Button x:Name="SaveImageDetailButton" Grid.Column="2" Text="Speichern" BackgroundColor="#2196F3" TextColor="White" FontAttributes="Bold" CornerRadius="10" HeightRequest="45" Clicked="OnSaveImageDetailClicked"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</ContentPage>

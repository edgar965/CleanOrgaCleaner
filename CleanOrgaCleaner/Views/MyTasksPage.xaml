<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.MyTasksPage"
             x:Name="ThisPage"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Grid.Row="0" Padding="15,45,15,15">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2196F3" Offset="0"/>
                    <GradientStop Color="#1976D2" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 1: App Name, Menu Button, Logout -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,8">
                <HorizontalStackLayout Grid.Column="0" Spacing="6" VerticalOptions="Center">
                    <Image Source="logo.jpg" WidthRequest="28" HeightRequest="28">
                        <Image.Clip>
                            <EllipseGeometry Center="14,14" RadiusX="14" RadiusY="14"/>
                        </Image.Clip>
                    </Image>
                    <Label Text="CleanOrga" FontSize="16" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <Button Grid.Column="1"
                        x:Name="MenuButton"
                        Text="Neue Aufgabe"
                        BackgroundColor="#1565C0"
                        TextColor="White"
                        FontSize="13"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="10,6"
                        HorizontalOptions="Center"
                        Clicked="OnMenuButtonClicked"/>

                <Button Grid.Column="2"
                        x:Name="LogoutButton"
                        Text="Logout"
                        BackgroundColor="#1565C0"
                        TextColor="White"
                        FontSize="13"
                        CornerRadius="8"
                        Padding="10,6"
                        Clicked="OnLogoutClicked"/>
            </Grid>

            <!-- Row 2: New Task Button -->
            <Button Grid.Row="1"
                    x:Name="NewTaskButton"
                    Text="+ Neue Aufgabe erstellen"
                    BackgroundColor="White"
                    TextColor="#2196F3"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Clicked="OnNewTaskClicked"/>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1">
            <!-- Empty State -->
            <VerticalStackLayout x:Name="EmptyStateView"
                                 IsVisible="False"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Spacing="10">
                <Label x:Name="EmptyLabel" Text="Keine eigenen Aufgaben"
                       FontSize="16"
                       TextColor="#999"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Tasks List -->
            <RefreshView x:Name="TaskRefreshView" Refreshing="OnRefreshing" IsVisible="True">
                <CollectionView x:Name="TasksCollectionView" SelectionMode="Single" SelectionChanged="OnTaskSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="15,10,15,0" Padding="15" BackgroundColor="White" StrokeShape="RoundRectangle 12">
                                <Border.Shadow>
                                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.15"/>
                                </Border.Shadow>
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                                        <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" TextColor="#333"/>
                                        <Label FontSize="13" TextColor="#666">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding PlannedDate}"/>
                                                    <Span Text=" - "/>
                                                    <Span Text="{Binding ApartmentName}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </VerticalStackLayout>
                                    <Border Grid.Column="1"
                                            Padding="8,4"
                                            BackgroundColor="{Binding StatusColor}"
                                            StrokeShape="RoundRectangle 8"
                                            VerticalOptions="Center">
                                        <Label Text="{Binding StatusDisplay}" FontSize="11" TextColor="White"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </Grid>

        <!-- Dropdown Menu Overlay -->
        <Grid x:Name="MenuOverlayGrid"
              Grid.RowSpan="2"
              IsVisible="False"
              ZIndex="1000">

            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <Border StrokeShape="RoundRectangle 12"
                    Stroke="Transparent"
                    Padding="0"
                    Margin="60,95,60,0"
                    VerticalOptions="Start">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2196F3" Offset="0"/>
                        <GradientStop Color="#1976D2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Shadow>
                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.3"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="0">
                    <Button x:Name="MenuTodayBtn" Text="Heute" BackgroundColor="#2196F3" TextColor="White" FontSize="16" Padding="20,15" HorizontalOptions="Fill" Clicked="OnMenuTodayClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuChatBtn" Text="Chat" BackgroundColor="#2196F3" TextColor="White" FontSize="16" Padding="20,15" HorizontalOptions="Fill" Clicked="OnMenuChatClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuMyTasksBtn" Text="Neue Aufgabe" BackgroundColor="#2196F3" TextColor="White" FontSize="16" Padding="20,15" HorizontalOptions="Fill" Clicked="OnMenuMyTasksClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuSettingsBtn" Text="Einstellungen" BackgroundColor="#2196F3" TextColor="White" FontSize="16" Padding="20,15" HorizontalOptions="Fill" Clicked="OnMenuSettingsClicked"/>
                </VerticalStackLayout>
            </Border>
        </Grid>

        <!-- Task Edit Popup -->
        <Grid x:Name="TaskPopupOverlay"
              Grid.RowSpan="2"
              IsVisible="False"
              ZIndex="2000"
              BackgroundColor="#80000000">

            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPopupOverlayTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <Border StrokeShape="RoundRectangle 0,0,20,20"
                    Stroke="Transparent"
                    BackgroundColor="White"
                    Padding="0"
                    VerticalOptions="Start" Margin="0,110,0,0"
                    MaximumHeightRequest="650">

                <Grid RowDefinitions="Auto,Auto,*,Auto">
                    <!-- Popup Header -->
                    <Grid Grid.Row="0" Padding="20" ColumnDefinitions="*,Auto">
                        <Label x:Name="PopupTitle" Grid.Column="0" Text="Neue Aufgabe" FontSize="18" FontAttributes="Bold"/>
                        <Button Grid.Column="1" Text="X" BackgroundColor="Transparent" TextColor="#999" FontSize="20" Clicked="OnClosePopupClicked"/>
                    </Grid>

                    <!-- Tabs -->
                    <HorizontalStackLayout Grid.Row="1" Spacing="0" Padding="0,0,0,10">
                        <Button x:Name="TabDetails" Text="Details" BackgroundColor="Transparent" TextColor="#2196F3" FontSize="13" FontAttributes="Bold" Padding="16,10" Clicked="OnTabDetailsClicked"/>
                        <Button x:Name="TabAssign" Text="Zuweisen" BackgroundColor="Transparent" TextColor="#666" FontSize="13" Padding="16,10" Clicked="OnTabAssignClicked"/>
                        <Button x:Name="TabStatus" Text="Status" BackgroundColor="Transparent" TextColor="#666" FontSize="13" Padding="12,8" Clicked="OnTabStatusClicked"/>
                        <Button x:Name="TabChecklist" Text="Checkliste" BackgroundColor="Transparent" TextColor="#666" FontSize="13" Padding="12,8" Clicked="OnTabChecklistClicked"/>
                    </HorizontalStackLayout>

                    <!-- Tab Contents -->
                    <ScrollView Grid.Row="2" Padding="20,0">
                        <Grid>
                            <!-- Details Tab -->
                            <VerticalStackLayout x:Name="DetailsTabContent" IsVisible="True" Spacing="15">
                                <VerticalStackLayout Spacing="5">
                                    <Label x:Name="LabelTaskName" Text="Aufgabenname *" FontSize="14" FontAttributes="Bold"/>
                                    <Entry x:Name="TaskNameEntry" Placeholder="Name" FontSize="16"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Spacing="5">
                                    <Label x:Name="LabelApartment" Text="Apartment" FontSize="14" FontAttributes="Bold"/>
                                    <Picker x:Name="ApartmentPicker" FontSize="16"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Spacing="5">
                                    <Label x:Name="LabelDate" Text="Datum *" FontSize="14" FontAttributes="Bold"/>
                                    <DatePicker x:Name="TaskDatePicker" FontSize="16"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Spacing="5">
                                    <Label x:Name="LabelTaskType" Text="Aufgabenart" FontSize="14" FontAttributes="Bold"/>
                                    <Picker x:Name="AufgabenartPicker" FontSize="16" SelectedIndexChanged="OnAufgabenartChanged"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Spacing="5">
                                    <Label x:Name="LabelHint" Text="Hinweis" FontSize="14" FontAttributes="Bold"/>
                                    <Editor x:Name="TaskHinweisEditor" Placeholder="Optionaler Hinweis..." FontSize="16" HeightRequest="80"/>
                                </VerticalStackLayout>
                            </VerticalStackLayout>

                            <!-- Assign Tab -->
                            <VerticalStackLayout x:Name="AssignTabContent" IsVisible="False" Spacing="10">
                                <Label x:Name="LabelAssignCleaners" Text="Cleaner zuweisen" FontSize="14" FontAttributes="Bold"/>
                                <CollectionView x:Name="CleanersList" SelectionMode="None">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,5" Padding="12" BackgroundColor="#f8f9fa" StrokeShape="RoundRectangle 10">
                                                <Grid ColumnDefinitions="Auto,*,Auto">
                                                    <Border Grid.Column="0" WidthRequest="40" HeightRequest="40" StrokeShape="RoundRectangle 20" BackgroundColor="#4CAF50">
                                                        <Label Text="{Binding Initial}" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                    </Border>
                                                    <Label Grid.Column="1" Text="{Binding Name}" FontAttributes="Bold" VerticalOptions="Center" Margin="12,0,0,0"/>
                                                    <HorizontalStackLayout Grid.Column="2" Spacing="5">
                                                        <Button Text="Putzen" BackgroundColor="{Binding CleaningBgColor}" TextColor="{Binding CleaningTextColor}" BorderColor="#ffc107" BorderWidth="2" FontSize="10" Padding="6,4" CornerRadius="6" Clicked="OnCleaningToggled" CommandParameter="{Binding Id}"/>
                                                        <Button Text="Check" BackgroundColor="{Binding CheckBgColor}" TextColor="{Binding CheckTextColor}" BorderColor="#ff9800" BorderWidth="2" FontSize="10" Padding="6,4" CornerRadius="6" Clicked="OnCheckToggled" CommandParameter="{Binding Id}"/>
                                                        <Button Text="Repar." BackgroundColor="{Binding RepareBgColor}" TextColor="{Binding RepareTextColor}" BorderColor="#f44336" BorderWidth="2" FontSize="10" Padding="6,4" CornerRadius="6" Clicked="OnRepareToggled" CommandParameter="{Binding Id}"/>
                                                    </HorizontalStackLayout>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>

                            <!-- Status Tab -->
                            <VerticalStackLayout x:Name="StatusTabContent" IsVisible="False" Spacing="10">
                                <Label x:Name="LabelSelectStatus" Text="Status waehlen" FontSize="14" FontAttributes="Bold"/>
                                <RadioButton x:Name="StatusImported" Content="Nicht zugewiesen" GroupName="Status" IsChecked="True"/>
                                <RadioButton x:Name="StatusAssigned" Content="Zugewiesen" GroupName="Status"/>
                                <RadioButton x:Name="StatusCleaned" Content="Geputzt" GroupName="Status"/>
                                <RadioButton x:Name="StatusChecked" Content="Gecheckt" GroupName="Status"/>
                            </VerticalStackLayout>

                            <!-- Checkliste Tab -->
                            <VerticalStackLayout x:Name="ChecklistTabContent" IsVisible="False" Spacing="10">
                                <Label x:Name="LabelChecklist" Text="Checkliste" FontSize="14" FontAttributes="Bold"/>
                                <Label x:Name="ChecklistEmptyLabel" Text="Waehle eine Aufgabenart mit Checkliste" TextColor="#888" HorizontalOptions="Center" IsVisible="True"/>
                                <VerticalStackLayout x:Name="ChecklistItemsContainer" Spacing="8"/>
                            </VerticalStackLayout>
                        </Grid>
                    </ScrollView>

                    <!-- Footer -->
                    <Grid Grid.Row="3" ColumnDefinitions="*,*" Padding="15" ColumnSpacing="10">
                        <Button x:Name="BtnCancel" Grid.Column="0" Text="Abbrechen" BackgroundColor="#e0e0e0" TextColor="#666" FontSize="16" FontAttributes="Bold" CornerRadius="10" HeightRequest="50" Clicked="OnCancelClicked"/>
                        <Button x:Name="BtnSave" Grid.Column="1" Text="Speichern" TextColor="White" FontSize="16" FontAttributes="Bold" CornerRadius="10" HeightRequest="50" Clicked="OnSaveClicked">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#2196F3" Offset="0"/>
                                    <GradientStop Color="#1976D2" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</ContentPage>

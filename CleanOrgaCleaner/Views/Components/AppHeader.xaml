<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.Components.AppHeader">

    <Grid RowDefinitions="Auto,Auto">

        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,45,20,12" BackgroundColor="#1a3a5c">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 0: App Name, Menu Button, Start/Stop Work -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
                <!-- App Name - Tappable to go to Today -->
                <Label Grid.Column="0"
                       Text="CleanOrga"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#2196F3"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLogoTapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <!-- Hamburger Menu Button (centered, small square like Django client) -->
                <Button Grid.Column="1"
                        x:Name="MenuButton"
                        Text="&#x2261;"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        FontSize="22"
                        CornerRadius="8"
                        WidthRequest="50"
                        HeightRequest="44"
                        Padding="0"
                        HorizontalOptions="Center"
                        Clicked="OnMenuButtonClicked"/>

                <!-- Start/Stop Work Button (larger, like Django client) -->
                <Button Grid.Column="2"
                        x:Name="WorkToggleButton"
                        Text="Start"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="24,12"
                        Clicked="OnWorkToggleClicked"/>
            </Grid>

            <!-- Row 1: Current Page and User Info -->
            <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,8,0,0">
                <Label Grid.Column="0"
                       x:Name="PageTitleLabel"
                       Text=""
                       FontSize="18"
                       TextColor="White"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>

                <Label Grid.Column="1"
                       x:Name="UserInfoLabel"
                       Text=""
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#4fc3f7"/>
            </Grid>
        </Grid>

        <!-- Offline Banner -->
        <Border x:Name="OfflineBanner"
                Grid.Row="1"
                BackgroundColor="#ff9800"
                Padding="10,8"
                IsVisible="False">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                <Label x:Name="OfflineLabel"
                       Text="Offline"
                       TextColor="White"
                       FontSize="13"
                       VerticalOptions="Center"/>
                <ActivityIndicator x:Name="OfflineSpinner"
                                   IsRunning="True"
                                   Color="White"
                                   WidthRequest="16"
                                   HeightRequest="16"/>
            </HorizontalStackLayout>
        </Border>

        <!-- Menu Overlay -->
        <Grid x:Name="MenuOverlayGrid"
              Grid.RowSpan="2"
              IsVisible="False"
              ZIndex="1000">

            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <Border StrokeShape="RoundRectangle 12"
                    Stroke="Transparent"
                    Padding="0"
                    Margin="60,95,60,0"
                    VerticalOptions="Start">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2196F3" Offset="0"/>
                        <GradientStop Color="#1976D2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Shadow>
                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.3"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="0">
                    <Button x:Name="MenuTodayButton" Text="ðŸ  Heute"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuTodayClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuChatButton" Text="ðŸ’¬ Chat"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuChatClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuAuftragButton" Text="ðŸ“‹ Auftrag"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuAuftragClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuSettingsButton" Text="Einstellungen"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuSettingsClicked"/>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Button x:Name="MenuLogoutButton" Text="ðŸšª Logout"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnLogoutClicked"/>
                </VerticalStackLayout>
            </Border>
        </Grid>

        <!-- Work Stop Popup -->
        <Grid x:Name="WorkStopPopup"
              Grid.RowSpan="2"
              IsVisible="False"
              BackgroundColor="#80000000"
              ZIndex="2000">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnWorkStopPopupBackgroundTapped"/>
            </Grid.GestureRecognizers>

            <Border BackgroundColor="White"
                    StrokeShape="RoundRectangle 20"
                    Stroke="Transparent"
                    Padding="30"
                    Margin="20"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaximumWidthRequest="400">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,10" Radius="40" Opacity="0.3"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="12">
                    <Label x:Name="WorkStopQuestion"
                           Text="Wurde die Reinigung vollstaendig beendet?"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#333"
                           HorizontalTextAlignment="Center"
                           LineHeight="1.4"/>

                    <Button x:Name="WorkStopYesButton"
                            Text="âœ“ Ja"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="50"
                            Clicked="OnWorkStopYesClicked"/>

                    <Button x:Name="WorkStopNoButton"
                            Text="âœ— Nein"
                            BackgroundColor="#FF9800"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="50"
                            Clicked="OnWorkStopNoClicked"/>

                    <Button x:Name="WorkStopCancelButton"
                            Text="Abbrechen"
                            BackgroundColor="#f0f0f0"
                            TextColor="#666"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="50"
                            Clicked="OnWorkStopCancelClicked"/>
                </VerticalStackLayout>
            </Border>
        </Grid>

    </Grid>
</ContentView>

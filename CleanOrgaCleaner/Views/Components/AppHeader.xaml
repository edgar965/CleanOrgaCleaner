<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.Components.AppHeader">

    <Grid Padding="20,45,20,12" BackgroundColor="#1a3a5c">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 0: App Name, Menu Button, Logout -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
            <!-- App Name - Tappable to go to Today -->
            <Label Grid.Column="0"
                   Text="CleanOrga"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#2196F3"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLogoTapped"/>
                </Label.GestureRecognizers>
            </Label>

            <!-- Hamburger Menu Button (centered) -->
            <Button Grid.Column="1"
                    x:Name="MenuButton"
                    Text="≡ Menü ▼"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    Padding="20,10"
                    HorizontalOptions="Center"
                    Clicked="OnMenuButtonClicked"/>

            <!-- Logout Button -->
            <Button Grid.Column="2"
                    x:Name="LogoutButton"
                    Text="Logout"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    Padding="20,10"
                    Clicked="OnLogoutClicked"/>
        </Grid>

        <!-- Row 1: Current Page and User Info -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,8,0,0">
            <Label Grid.Column="0"
                   x:Name="PageTitleLabel"
                   Text=""
                   FontSize="18"
                   TextColor="White"
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>

            <Label Grid.Column="1"
                   x:Name="UserInfoLabel"
                   Text=""
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#4fc3f7"/>
        </Grid>
    </Grid>
</ContentView>

<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.Components.AppHeader">
    
    <Grid RowDefinitions="Auto">
        <!-- Header Bar -->
        <Grid Grid.Row="0" Padding="15,45,15,15">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2196F3" Offset="0"/>
                    <GradientStop Color="#1976D2" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Logo and App Name -->
                <HorizontalStackLayout Grid.Column="0" Spacing="6" VerticalOptions="Center">
                    <Image Source="logo.jpg" WidthRequest="28" HeightRequest="28">
                        <Image.Clip>
                            <EllipseGeometry Center="14,14" RadiusX="14" RadiusY="14"/>
                        </Image.Clip>
                    </Image>
                    <Label Text="CleanOrga" FontSize="16" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Menu Dropdown Button -->
                <Button Grid.Column="1"
                        x:Name="MenuButton"
                        Text="Menu"
                        BackgroundColor="#ffffff33"
                        TextColor="White"
                        FontSize="13"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="10,6"
                        HorizontalOptions="Center"
                        Clicked="OnMenuButtonClicked"/>

                <!-- Logout Button -->
                <Button Grid.Column="2"
                        x:Name="LogoutButton"
                        Text="Logout"
                        BackgroundColor="#ffffff33"
                        TextColor="White"
                        FontSize="13"
                        CornerRadius="8"
                        Padding="10,6"
                        Clicked="OnLogoutClicked"/>
            </Grid>
        </Grid>
    </Grid>
</ContentView>

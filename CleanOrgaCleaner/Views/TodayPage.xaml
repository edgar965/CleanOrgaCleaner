<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:CleanOrgaCleaner.Views.Components"
             x:Class="CleanOrgaCleaner.Views.TodayPage"
             Title="Heute"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- AppHeader Component -->
        <components:AppHeader x:Name="Header" Grid.Row="0"/>

        <!-- Tasks Content -->
        <Grid Grid.Row="1">
            <!-- Empty State -->
            <VerticalStackLayout x:Name="EmptyStateView"
                                 IsVisible="False"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Spacing="10">
                <Label Text="&#x1F4CB;"
                       FontSize="60"
                       Opacity="0.3"
                       HorizontalOptions="Center"/>
                <Label x:Name="NoTasksLabel"
                       Text="Keine Aufgaben fÃ¼r heute"
                       FontSize="16"
                       TextColor="#999"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Tasks List -->
            <RefreshView x:Name="TaskRefreshView"
                         Refreshing="OnRefreshing"
                         IsVisible="True">
                <ScrollView>
                    <VerticalStackLayout x:Name="TasksStackLayout"
                                         Spacing="12"
                                         Padding="15"/>
                </ScrollView>
            </RefreshView>
        </Grid>

    </Grid>
</ContentPage>

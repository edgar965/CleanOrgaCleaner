<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.TodayPage"
             Title="Heute"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,Auto,*">

        <!-- Header with Menu - mit SafeArea Padding oben -->
        <Grid Grid.Row="0" Padding="15,45,15,15" BackgroundColor="#1a3a5c">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 0: App Name, Menu Button, Logout -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,8">
                <!-- Logo and App Name - Tappable to go to Today -->
                <HorizontalStackLayout Grid.Column="0" Spacing="6" VerticalOptions="Center">
                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLogoTapped"/>
                    </HorizontalStackLayout.GestureRecognizers>
                    <Image Source="logo.jpg"
                           WidthRequest="28"
                           HeightRequest="28">
                        <Image.Clip>
                            <EllipseGeometry Center="14,14" RadiusX="14" RadiusY="14"/>
                        </Image.Clip>
                    </Image>
                    <Label Text="CleanOrga"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#4a9eff"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Menu Dropdown Button -->
                <Button Grid.Column="1"
                        x:Name="MenuButton"
                        Text="â‰¡  MenÃ¼ â–¼"
                        BackgroundColor="#0078D4"
                        TextColor="White"
                        FontSize="15"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        Padding="20,10"
                        HorizontalOptions="Center"
                        Clicked="OnMenuButtonClicked"/>

                <Button Grid.Column="2"
                        x:Name="LogoutButton"
                        Text="Logout"
                        BackgroundColor="#0078D4"
                        TextColor="White"
                        FontSize="15"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        Padding="20,10"
                        Clicked="OnLogoutClicked"/>
            </Grid>

            <!-- Row 1: Date and User Info (like Django) -->
            <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                <Label Grid.Column="0"
                       x:Name="DateLabel"
                       Text=""
                       FontSize="13"
                       TextColor="White"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>

                <Label Grid.Column="1"
                       x:Name="UserInfoLabel"
                       Text=""
                       FontSize="13"
                       TextColor="#4a9eff"/>
            </Grid>
        </Grid>

        <!-- Offline Banner -->
        <Border x:Name="OfflineBanner"
                Grid.Row="1"
                BackgroundColor="#ff9800"
                Padding="10,8"
                IsVisible="False">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                <Label Text="Offline - Aenderungen werden gespeichert"
                       TextColor="White"
                       FontSize="13"
                       VerticalOptions="Center"/>
                <ActivityIndicator x:Name="OfflineSpinner"
                                   IsRunning="True"
                                   Color="White"
                                   WidthRequest="16"
                                   HeightRequest="16"/>
            </HorizontalStackLayout>
        </Border>

        <!-- Tasks Content -->
        <Grid Grid.Row="2">
            <!-- Empty State -->
            <VerticalStackLayout x:Name="EmptyStateView"
                                 IsVisible="False"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Spacing="10">
                <Label Text="ðŸ“‹"
                       FontSize="60"
                       Opacity="0.3"
                       HorizontalOptions="Center"/>
                <Label x:Name="NoTasksLabel"
                       Text="Keine Aufgaben fÃ¼r heute"
                       FontSize="16"
                       TextColor="#999"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Tasks Grid -->
            <RefreshView x:Name="TaskRefreshView"
                         Refreshing="OnRefreshing"
                         IsVisible="True">
                <ScrollView>
                    <FlexLayout x:Name="TasksFlexLayout"
                                Wrap="Wrap"
                                JustifyContent="Center"
                                AlignContent="Start"
                                Padding="10"/>
                </ScrollView>
            </RefreshView>
        </Grid>

        <!-- Dropdown Menu Overlay -->
        <Grid x:Name="MenuOverlayGrid"
              Grid.RowSpan="3"
              IsVisible="False"
              ZIndex="1000">

            <!-- Background tap to close -->
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <!-- Menu dropdown -->
            <Border StrokeShape="RoundRectangle 12"
                    Stroke="Transparent"
                    Padding="0"
                    Margin="60,95,60,0"
                    VerticalOptions="Start"
                    BackgroundColor="#1a3a5c">
                <Border.Shadow>
                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.3"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="0">
                    <Border BackgroundColor="#1a3a5c" Padding="20,15" HorizontalOptions="Fill">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnMenuTodayClicked"/>
                                </Border.GestureRecognizers>
                                <Label x:Name="MenuTodayLabel" Text="Heute" TextColor="White" FontSize="16" HorizontalOptions="Center"/>
                            </Border>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Border BackgroundColor="#1a3a5c" Padding="20,15" HorizontalOptions="Fill">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnMenuChatClicked"/>
                                </Border.GestureRecognizers>
                                <Label x:Name="MenuChatLabel" Text="Chat" TextColor="White" FontSize="16" HorizontalOptions="Center"/>
                            </Border>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Border BackgroundColor="#1a3a5c" Padding="20,15" HorizontalOptions="Fill">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnMenuAuftragClicked"/>
                                </Border.GestureRecognizers>
                                <Label x:Name="MenuAuftragLabel" Text="Auftrag" TextColor="White" FontSize="16" HorizontalOptions="Center"/>
                            </Border>
                    <BoxView HeightRequest="1" Color="#ffffff33"/>
                    <Border BackgroundColor="#1a3a5c" Padding="20,15" HorizontalOptions="Fill">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnMenuSettingsClicked"/>
                                </Border.GestureRecognizers>
                                <Label x:Name="MenuSettingsLabel" Text="Einstellungen" TextColor="White" FontSize="16" HorizontalOptions="Center"/>
                            </Border>
                </VerticalStackLayout>
            </Border>
        </Grid>

    </Grid>
</ContentPage>

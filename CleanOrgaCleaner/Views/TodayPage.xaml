<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.TodayPage"
             Title="Heute"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header with Menu -->
        <Grid Grid.Row="0" Padding="15,12,15,15">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667eea" Offset="0"/>
                    <GradientStop Color="#764ba2" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Row 1: App Name, Menu Button, Logout -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,8">
                <!-- Logo and App Name -->
                <HorizontalStackLayout Grid.Column="0" Spacing="6" VerticalOptions="Center">
                    <Image Source="logo.jpg"
                           WidthRequest="28"
                           HeightRequest="28">
                        <Image.Clip>
                            <EllipseGeometry Center="14,14" RadiusX="14" RadiusY="14"/>
                        </Image.Clip>
                    </Image>
                    <Label Text="CleanOrga"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Menu Dropdown Button -->
                <Button Grid.Column="1"
                        x:Name="MenuButton"
                        Text="Heute â–¼"
                        BackgroundColor="#ffffff33"
                        TextColor="White"
                        FontSize="13"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="10,6"
                        HorizontalOptions="Center"
                        Clicked="OnMenuButtonClicked"/>

                <Button Grid.Column="2"
                        x:Name="LogoutButton"
                        Text="Logout"
                        BackgroundColor="#ffffff33"
                        TextColor="White"
                        FontSize="13"
                        CornerRadius="8"
                        Padding="10,6"
                        Clicked="OnLogoutClicked"/>
            </Grid>

            <!-- Row 2: Date and User Info -->
            <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                <Label Grid.Column="0"
                       x:Name="DateLabel"
                       Text=""
                       FontSize="13"
                       TextColor="White"
                       Opacity="0.95"
                       FontAttributes="Bold"/>

                <Label Grid.Column="1"
                       x:Name="UserInfoLabel"
                       Text=""
                       FontSize="13"
                       TextColor="White"
                       Opacity="0.95"/>
            </Grid>

            <!-- Row 3: Work Button -->
            <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
                <Button Grid.Column="0"
                        x:Name="WorkButton"
                        Text="Start Arbeit"
                        BackgroundColor="#9e9e9e"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="50"
                        Clicked="OnWorkButtonClicked"/>

                <Label Grid.Column="1"
                       x:Name="WorkStatusLabel"
                       Text=""
                       FontSize="12"
                       TextColor="White"
                       VerticalOptions="Center"
                       Margin="10,0,0,0"/>
            </Grid>
        </Grid>

        <!-- Tasks Content -->
        <Grid Grid.Row="1">
            <!-- Empty State -->
            <VerticalStackLayout x:Name="EmptyStateView"
                                 IsVisible="False"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Spacing="10">
                <Label Text="ðŸ“‹"
                       FontSize="60"
                       Opacity="0.3"
                       HorizontalOptions="Center"/>
                <Label x:Name="NoTasksLabel"
                       Text="Keine Aufgaben fÃ¼r heute"
                       FontSize="16"
                       TextColor="#999"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Tasks Grid -->
            <RefreshView x:Name="TaskRefreshView"
                         Refreshing="OnRefreshing"
                         IsVisible="True">
                <ScrollView>
                    <FlexLayout x:Name="TasksFlexLayout"
                                Wrap="Wrap"
                                JustifyContent="Center"
                                AlignContent="Start"
                                Padding="10"/>
                </ScrollView>
            </RefreshView>
        </Grid>

        <!-- Dropdown Menu Overlay -->
        <Grid x:Name="MenuOverlayGrid"
              Grid.RowSpan="2"
              IsVisible="False"
              ZIndex="1000">

            <!-- Background tap to close -->
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <!-- Menu dropdown -->
            <Border BackgroundColor="White"
                    StrokeShape="RoundRectangle 12"
                    Stroke="Transparent"
                    Padding="0"
                    Margin="60,65,60,0"
                    VerticalOptions="Start">
                <Border.Shadow>
                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.3"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="0">
                    <Button Text="ðŸ  Heute"
                            BackgroundColor="Transparent"
                            TextColor="#333"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuTodayClicked"/>
                    <BoxView HeightRequest="1" Color="#f0f0f0"/>
                    <Button Text="ðŸ’¬ Chat"
                            BackgroundColor="Transparent"
                            TextColor="#333"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuChatClicked"/>
                    <BoxView HeightRequest="1" Color="#f0f0f0"/>
                    <Button Text="âš™ï¸ Einstellungen"
                            BackgroundColor="Transparent"
                            TextColor="#333"
                            FontSize="16"
                            Padding="20,15"
                            HorizontalOptions="Fill"
                            Clicked="OnMenuSettingsClicked"/>
                </VerticalStackLayout>
            </Border>
        </Grid>

    </Grid>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:CleanOrgaCleaner.Views.Components"
             x:Class="CleanOrgaCleaner.Views.AuftragPage"
             x:Name="ThisPage"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- AppHeader Component -->
        <components:AppHeader x:Name="Header" Grid.Row="0"/>

        <!-- Content -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*">
            <!-- New Task Button -->
            <Button Grid.Row="0"
                    x:Name="NewTaskButton"
                    Text="+ Neue Aufgabe erstellen"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Margin="15,15,15,0"
                    Clicked="OnNewTaskClicked"/>

            <!-- Empty State -->
            <VerticalStackLayout Grid.Row="1" x:Name="EmptyStateView"
                                 IsVisible="False"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Spacing="10">
                <Label x:Name="EmptyLabel" Text="Keine eigenen Aufgaben"
                       FontSize="16"
                       TextColor="#999"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Tasks List -->
            <RefreshView Grid.Row="1" x:Name="TaskRefreshView" Refreshing="OnRefreshing" IsVisible="True">
                <CollectionView x:Name="TasksCollectionView" SelectionMode="Single" SelectionChanged="OnTaskSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="15,10,15,0" Padding="15" BackgroundColor="White" StrokeShape="RoundRectangle 12">
                                <Border.Shadow>
                                    <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.15"/>
                                </Border.Shadow>
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                                        <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" TextColor="#333"/>
                                        <Label FontSize="13" TextColor="#666">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding PlannedDate}"/>
                                                    <Span Text=" - "/>
                                                    <Span Text="{Binding ApartmentName}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </VerticalStackLayout>
                                    <Border Grid.Column="1"
                                            Padding="8,4"
                                            BackgroundColor="{Binding StatusColor}"
                                            StrokeShape="RoundRectangle 8"
                                            VerticalOptions="Center">
                                        <Label Text="{Binding StatusDisplay}" FontSize="11" TextColor="White"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </Grid>

        <!-- Task Edit Popup (Centered Modal Style like Problem melden) -->
        <Grid x:Name="TaskPopupOverlay"
              Grid.RowSpan="2"
              IsVisible="False"
              ZIndex="2000"
              BackgroundColor="#801a3a5c">

            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPopupOverlayTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>

            <Border StrokeShape="RoundRectangle 20"
                    Stroke="Transparent"
                    BackgroundColor="White"
                    Padding="0"
                    VerticalOptions="Center"
                    Margin="20"
                    MaximumWidthRequest="400"
                    MaximumHeightRequest="650">
                <Border.Shadow><Shadow Brush="Black" Offset="0,5" Radius="20" Opacity="0.3"/></Border.Shadow>

                <Grid RowDefinitions="Auto,*">
                    <!-- Popup Header (Blue like Problem melden) -->
                    <Grid Grid.Row="0" Padding="20,15,15,15" BackgroundColor="#1a3a5c">
                        <Label x:Name="PopupTitle" Text="Auftrag erstellen" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                        <Button Text="X" BackgroundColor="Transparent" TextColor="White" FontSize="18" FontAttributes="Bold" WidthRequest="40" HeightRequest="40" HorizontalOptions="End" Clicked="OnClosePopupClicked"/>
                    </Grid>

                    <!-- Scrollable Content -->
                    <ScrollView Grid.Row="1" Padding="20,10,20,20">
                        <VerticalStackLayout Spacing="15">
                            <!-- Tabs (scrollable) -->
                            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                                <HorizontalStackLayout Spacing="5">
                                    <Button x:Name="TabDetails" Text="Details" BackgroundColor="#2196F3" TextColor="White" FontSize="13" FontAttributes="Bold" Padding="12,8" CornerRadius="8" Clicked="OnTabDetailsClicked"/>
                                    <Button x:Name="TabAnmerkungen" Text="Notiz" BackgroundColor="#e0e0e0" TextColor="#666" FontSize="13" Padding="12,8" CornerRadius="8" Clicked="OnTabAnmerkungenClicked"/>
                                    <Button x:Name="TabAssign" Text="Zuweisen" BackgroundColor="#e0e0e0" TextColor="#666" FontSize="13" Padding="12,8" CornerRadius="8" Clicked="OnTabAssignClicked"/>
                                    <Button x:Name="TabLogs" Text="Log" BackgroundColor="#e0e0e0" TextColor="#666" FontSize="13" Padding="12,8" CornerRadius="8" Clicked="OnTabLogsClicked"/>
                                </HorizontalStackLayout>
                            </ScrollView>

                            <!-- Tab Contents -->
                            <Grid>
                                <!-- Details Tab -->
                                <VerticalStackLayout x:Name="DetailsTabContent" IsVisible="True" Spacing="12">
                                    <!-- Aufgabenname und Apartment nebeneinander -->
                                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                                            <Label x:Name="LabelTaskName" Text="Aufgabenname *" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                            <Entry x:Name="TaskNameEntry" Placeholder="Name" Text="Reparatur" FontSize="16" BackgroundColor="#f5f5f5"/>
                                        </VerticalStackLayout>
                                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                                            <Label x:Name="LabelApartment" Text="Apartment" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                            <Picker x:Name="ApartmentPicker" FontSize="16"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                    <!-- Aufgabe (Beschreibung) -->
                                    <VerticalStackLayout Spacing="4">
                                        <Label x:Name="LabelHint" Text="Aufgabe" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                        <Editor x:Name="TaskHinweisEditor" Placeholder="Beschreibung der Aufgabe..." FontSize="16" HeightRequest="80" BackgroundColor="#f5f5f5"/>
                                    </VerticalStackLayout>
                                    <!-- Datum -->
                                    <VerticalStackLayout Spacing="4">
                                        <Label x:Name="LabelDate" Text="Datum *" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                        <DatePicker x:Name="TaskDatePicker" FontSize="16"/>
                                    </VerticalStackLayout>
                                    <!-- Aufgabenart (am Ende) -->
                                    <VerticalStackLayout Spacing="4">
                                        <Label x:Name="LabelTaskType" Text="Aufgabenart" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                        <Picker x:Name="AufgabenartPicker" FontSize="16" SelectedIndexChanged="OnAufgabenartChanged"/>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>

                                <!-- Assign Tab -->
                                <VerticalStackLayout x:Name="AssignTabContent" IsVisible="False" Spacing="10">
                                    <Label x:Name="LabelAssignCleaners" Text="Cleaner zuweisen" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                    <VerticalStackLayout x:Name="CleanersList" Spacing="5" BindableLayout.ItemsSource="{x:Null}">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate>
                                                <Border Padding="12" BackgroundColor="#f8f9fa" StrokeShape="RoundRectangle 10" HeightRequest="64">
                                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                                        <!-- Avatar: Emoji if available, otherwise Initial -->
                                                        <Grid Grid.Column="0" WidthRequest="44" HeightRequest="44">
                                                            <!-- Initial fallback (visible when no avatar) -->
                                                            <Border StrokeShape="RoundRectangle 22" BackgroundColor="#4CAF50" WidthRequest="44" HeightRequest="44" IsVisible="{Binding HasNoAvatar}">
                                                                <Label Text="{Binding Initial}" TextColor="White" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                            </Border>
                                                            <!-- Avatar emoji (shown when available) -->
                                                            <Border StrokeShape="RoundRectangle 22" BackgroundColor="#E8F5E9" WidthRequest="44" HeightRequest="44" IsVisible="{Binding HasAvatar}">
                                                                <Label Text="{Binding Avatar}" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                            </Border>
                                                        </Grid>
                                                        <Label Grid.Column="1" Text="{Binding Name}" FontSize="15" FontAttributes="Bold" VerticalOptions="Center"/>
                                                        <Button Grid.Column="2" Text="Zuweisen" BackgroundColor="{Binding AssignBgColor}" TextColor="{Binding AssignTextColor}" BorderColor="#2196F3" BorderWidth="2" FontSize="12" Padding="12,6" CornerRadius="8" Clicked="OnAssignToggled" CommandParameter="{Binding Id}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>

                                <!-- Anmerkungen Tab -->
                                <VerticalStackLayout x:Name="AnmerkungenTabContent" IsVisible="False" Spacing="10">
                                    <Button x:Name="AddAnmerkungButton" Text="Anmerkung hinzufuegen" BackgroundColor="#2196F3" TextColor="White" FontSize="14" FontAttributes="Bold" CornerRadius="10" HeightRequest="45" Clicked="OnAddAnmerkungClicked"/>
                                    <VerticalStackLayout x:Name="AnmerkungenStack" Spacing="10"/>
                                    <Label x:Name="NoAnmerkungenLabel" Text="Keine Anmerkungen vorhanden" FontSize="14" TextColor="#888" HorizontalOptions="Center" IsVisible="True"/>
                                </VerticalStackLayout>

                                <!-- Logs Tab -->
                                <VerticalStackLayout x:Name="LogsTabContent" IsVisible="False" Spacing="10">
                                    <Label x:Name="LabelLogs" Text="Log" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                    <VerticalStackLayout x:Name="LogsStack" Spacing="8">
                                        <Label x:Name="NoLogsLabel" Text="Keine Protokolleintraege vorhanden" FontSize="14" TextColor="#888" HorizontalOptions="Center"/>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </Grid>

                            <!-- Footer Buttons -->
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                                <Button x:Name="BtnCancel" Grid.Column="0" Text="Abbrechen" BackgroundColor="#f0f0f0" TextColor="#666" CornerRadius="12" HeightRequest="50" Clicked="OnCancelClicked"/>
                                <Button x:Name="BtnSave" Grid.Column="1" Text="Speichern" BackgroundColor="#2196F3" TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnSaveClicked"/>
                            </Grid>
                            <Button x:Name="BtnDelete" Text="Aufgabe loeschen" BackgroundColor="White" TextColor="#f44336" BorderColor="#f44336" BorderWidth="2" FontSize="14" FontAttributes="Bold" CornerRadius="12" HeightRequest="45" Clicked="OnDeleteTaskClicked" IsVisible="False"/>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Border>
        </Grid>

        <!-- ImageListDescriptionDialog (fÃ¼r Anmerkungen) -->
        <Grid x:Name="ImageListDescriptionDialog" IsVisible="False" BackgroundColor="#801a3a5c" ZIndex="3000" Grid.RowSpan="2">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnImageListDescriptionDialogBackgroundTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border BackgroundColor="White" StrokeShape="RoundRectangle 20,20,0,0" Stroke="Transparent" Margin="0" VerticalOptions="End" MaximumWidthRequest="500">
                <Border.Shadow><Shadow Brush="Black" Offset="0,-5" Radius="20" Opacity="0.3"/></Border.Shadow>
                <Grid RowDefinitions="Auto,*,Auto">
                    <Grid.Padding>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="iOS" Value="0,0,0,35"/>
                            <On Platform="Android" Value="0,0,0,50"/>
                        </OnPlatform>
                    </Grid.Padding>
                    <!-- Header -->
                    <Grid Padding="20,15,15,10" BackgroundColor="#2196F3">
                        <Label x:Name="ImageListDescriptionDialogTitle" Text="Anmerkung hinzufuegen" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                        <Button Text="X" BackgroundColor="Transparent" TextColor="White" FontSize="18" FontAttributes="Bold" WidthRequest="40" HeightRequest="40" HorizontalOptions="End" Clicked="OnCancelImageListDescriptionDialogClicked"/>
                    </Grid>
                    <!-- Scrollable Content -->
                    <ScrollView Grid.Row="1" Padding="20,10,20,10" MaximumHeightRequest="400">
                        <VerticalStackLayout Spacing="15">
                            <VerticalStackLayout Spacing="5">
                                <Label x:Name="ImageListDescriptionDialogNameLabel" Text="Name *" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Entry x:Name="ImageListDescriptionDialogNameEntry" FontSize="16" BackgroundColor="#f5f5f5" Placeholder="Name eingeben..."/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Spacing="5">
                                <Label x:Name="ImageListDescriptionDialogDescLabel" Text="Beschreibung" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Editor x:Name="ImageListDescriptionDialogDescEditor" HeightRequest="80" FontSize="15" BackgroundColor="#f5f5f5" Placeholder="Beschreibung eingeben..." TextChanged="OnImageListDescriptionDialogDescTextChanged"/>
                                <Label x:Name="ImageListDescriptionDialogCharCountLabel" Text="0 / 300" FontSize="11" TextColor="#999" HorizontalTextAlignment="End"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Spacing="8">
                                <Label x:Name="ImageListDescriptionDialogPhotosLabel" Text="Fotos" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                    <Button x:Name="ImageListDescriptionDialogTakePhotoButton" Text="Kamera" BackgroundColor="#e0e0e0" TextColor="#333" CornerRadius="8" Clicked="OnImageListDescriptionDialogTakePhotoClicked"/>
                                    <Button x:Name="ImageListDescriptionDialogPickPhotoButton" Grid.Column="1" Text="Galerie" BackgroundColor="#e0e0e0" TextColor="#333" CornerRadius="8" Clicked="OnImageListDescriptionDialogPickPhotoClicked"/>
                                </Grid>
                                <FlexLayout x:Name="ImageListDescriptionDialogPhotoPreviewStack" Wrap="Wrap" JustifyContent="Start" Direction="Row" IsVisible="False"/>
                                <Label x:Name="ImageListDescriptionDialogPhotoCountLabel" Text="" FontSize="12" TextColor="#888" IsVisible="False"/>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </ScrollView>
                    <!-- Footer Buttons -->
                    <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="10" Padding="20,10,20,0">
                        <Button x:Name="CancelImageListDescriptionDialogButton" Text="Abbrechen" BackgroundColor="#f0f0f0" TextColor="#666" CornerRadius="12" HeightRequest="50" Clicked="OnCancelImageListDescriptionDialogClicked"/>
                        <Button x:Name="SaveImageListDescriptionDialogButton" Grid.Column="1" Text="Speichern" BackgroundColor="#2196F3" TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnSaveImageListDescriptionDialogClicked"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</ContentPage>

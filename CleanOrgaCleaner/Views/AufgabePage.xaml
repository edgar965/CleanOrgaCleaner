<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:CleanOrgaCleaner.Views.Components"
             x:Class="CleanOrgaCleaner.Views.AufgabePage"
             Title="Aufgabe"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- AppHeader Component -->
        <components:AppHeader x:Name="Header" Grid.Row="0"/>

        <!-- Scrollable Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15" Padding="15">

                <!-- Task Title (z.B. "02 Reinigung") - Combined apartment and task name -->
                <Label x:Name="TaskNameLabel" Text="" FontSize="22" FontAttributes="Bold" TextColor="#1a3a5c"/>

                <!-- Tab Bar (scrollable) -->
                <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never" Margin="0,5,0,10">
                    <HorizontalStackLayout Spacing="8">
                        <Button x:Name="TabAufgabeButton" Text="Aufgabe"
                                BackgroundColor="White" TextColor="#1a3a5c"
                                FontSize="15" FontAttributes="Bold" CornerRadius="12"
                                HeightRequest="40" Padding="16,0" BorderWidth="0" Clicked="OnTabAufgabeClicked"/>
                        <Button x:Name="TabProblemeButton" Text="Problem"
                                BackgroundColor="#1a3a5c" TextColor="White"
                                FontSize="15" FontAttributes="Bold" CornerRadius="12"
                                HeightRequest="40" Padding="16,0" BorderWidth="0" Clicked="OnTabProblemeClicked"/>
                        <Button x:Name="TabAnmerkungenButton" Text="Notiz"
                                BackgroundColor="#1a3a5c" TextColor="White"
                                FontSize="15" FontAttributes="Bold" CornerRadius="12"
                                HeightRequest="40" Padding="16,0" BorderWidth="0" Clicked="OnTabAnmerkungenClicked"/>
                        <Button x:Name="TabLogsButton" Text="Log"
                                BackgroundColor="#1a3a5c" TextColor="White"
                                FontSize="15" FontAttributes="Bold" CornerRadius="12"
                                HeightRequest="40" Padding="16,0" BorderWidth="0" Clicked="OnTabLogsClicked"/>
                    </HorizontalStackLayout>
                </ScrollView>

                <!-- Tab Content: Aufgabe -->
                <Border x:Name="TabAufgabeContent" IsVisible="True" BackgroundColor="White" StrokeShape="RoundRectangle 15" Stroke="Transparent" Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Label x:Name="NoticeLabel" Text="" FontSize="18" TextColor="#1a3a5c" LineHeight="1.5"
                               IsVisible="False"/>
                        <Label x:Name="NoTaskDescriptionLabel" Text="Keine Aufgabenbeschreibung vorhanden"
                               FontSize="14" TextColor="#999" FontAttributes="Italic"
                               HorizontalTextAlignment="Center" IsVisible="True"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Tab Content: Probleme -->
                <Border x:Name="TabProblemeContent" IsVisible="False" BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Padding="20">
                    <Border.Shadow><Shadow Brush="Black" Offset="0,4" Radius="15" Opacity="0.08"/></Border.Shadow>
                    <VerticalStackLayout Spacing="15">
                        <Button x:Name="AddProblemButton" Text="Problem melden" BackgroundColor="#2196F3" TextColor="White" FontSize="16" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnAddProblemClicked">
                            <Button.Shadow><Shadow Brush="#2196F3" Offset="0,3" Radius="10" Opacity="0.3"/></Button.Shadow>
                        </Button>
                        <VerticalStackLayout x:Name="ProblemsStack" Spacing="15"/>
                        <Label x:Name="NoProblemsLabel" Text="Keine Probleme gemeldet" FontSize="14" TextColor="#999" FontAttributes="Italic" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Tab Content: Anmerkungen -->
                <Border x:Name="TabAnmerkungenContent" IsVisible="False" BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Padding="20">
                    <Border.Shadow><Shadow Brush="Black" Offset="0,4" Radius="15" Opacity="0.08"/></Border.Shadow>
                    <VerticalStackLayout Spacing="15">
                        <Button x:Name="AddAnmerkungButton" Text="Anmerkung hinzufuegen" BackgroundColor="#2196F3" TextColor="White" FontSize="16" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnAddAnmerkungClicked">
                            <Button.Shadow><Shadow Brush="#2196F3" Offset="0,3" Radius="10" Opacity="0.3"/></Button.Shadow>
                        </Button>
                        <VerticalStackLayout x:Name="AnmerkungenStack" Spacing="15"/>
                        <Label x:Name="NoAnmerkungenLabel" Text="Keine Anmerkungen vorhanden" FontSize="14" TextColor="#999" FontAttributes="Italic" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Tab Content: Protokoll -->
                <Border x:Name="TabLogsContent" IsVisible="False" BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Padding="20">
                    <Border.Shadow><Shadow Brush="Black" Offset="0,4" Radius="15" Opacity="0.08"/></Border.Shadow>
                    <VerticalStackLayout Spacing="15">
                        <VerticalStackLayout x:Name="LogsStack" Spacing="10"/>
                        <Label x:Name="NoLogsLabel" Text="Keine Protokolleintraege vorhanden" FontSize="14" TextColor="#999" FontAttributes="Italic" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Fixed Start/Beenden Button am unteren Rand -->
        <Border Grid.Row="2" BackgroundColor="White">
            <Border.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS" Value="15,12,15,35"/>
                    <On Platform="Android" Value="15,12,15,50"/>
                </OnPlatform>
            </Border.Padding>
            <Border.Shadow><Shadow Brush="Black" Offset="0,-4" Radius="20" Opacity="0.15"/></Border.Shadow>
            <Button x:Name="StartStopButton" Text="Start" BackgroundColor="#9e9e9e" TextColor="White" FontSize="18" FontAttributes="Bold" CornerRadius="15" HeightRequest="55" HorizontalOptions="Fill" Clicked="OnStartStopClicked">
                <Button.Shadow><Shadow Brush="Gray" Offset="0,3" Radius="10" Opacity="0.15"/></Button.Shadow>
            </Button>
        </Border>

        <!-- ImageListDescriptionDialog (für Problem und Anmerkung) -->
        <Grid x:Name="ImageListDescriptionDialog" IsVisible="False" BackgroundColor="#801a3a5c" ZIndex="1000" Grid.RowSpan="3">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnImageListDescriptionDialogBackgroundTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Margin="20" VerticalOptions="Center" MaximumWidthRequest="400" MaximumHeightRequest="650">
                <Border.Shadow><Shadow Brush="Black" Offset="0,5" Radius="20" Opacity="0.3"/></Border.Shadow>
                <Grid RowDefinitions="Auto,*">
                    <!-- Header -->
                    <Grid Padding="20,15,15,15" BackgroundColor="#1a3a5c">
                        <Label x:Name="ImageListDescriptionDialogTitle" Text="Problem melden" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                        <Button Text="X" BackgroundColor="Transparent" TextColor="White" FontSize="18" FontAttributes="Bold" WidthRequest="40" HeightRequest="40" HorizontalOptions="End" Clicked="OnCancelImageListDescriptionDialogClicked"/>
                    </Grid>
                    <ScrollView Grid.Row="1" Padding="20,10,20,20">
                        <VerticalStackLayout Spacing="15">
                            <!-- Name/Title -->
                            <VerticalStackLayout Spacing="5">
                                <Label x:Name="ImageListDescriptionDialogNameLabel" Text="Name *" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Entry x:Name="ImageListDescriptionDialogNameEntry" FontSize="16" BackgroundColor="#f5f5f5" Placeholder="Name eingeben..."/>
                            </VerticalStackLayout>
                            <!-- Description -->
                            <VerticalStackLayout Spacing="5">
                                <Label x:Name="ImageListDescriptionDialogDescLabel" Text="Beschreibung" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Editor x:Name="ImageListDescriptionDialogDescEditor" HeightRequest="80" FontSize="15" BackgroundColor="#f5f5f5" Placeholder="Beschreibung eingeben..." TextChanged="OnImageListDescriptionDialogDescTextChanged"/>
                                <Label x:Name="ImageListDescriptionDialogCharCountLabel" Text="0 / 300" FontSize="11" TextColor="#999" HorizontalTextAlignment="End"/>
                            </VerticalStackLayout>
                            <!-- Photos -->
                            <VerticalStackLayout Spacing="8">
                                <Label x:Name="ImageListDescriptionDialogPhotosLabel" Text="Fotos" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                    <Button x:Name="ImageListDescriptionDialogTakePhotoButton" Text="Kamera" BackgroundColor="#e0e0e0" TextColor="#333" CornerRadius="8" Clicked="OnImageListDescriptionDialogTakePhotoClicked"/>
                                    <Button x:Name="ImageListDescriptionDialogPickPhotoButton" Grid.Column="1" Text="Galerie" BackgroundColor="#e0e0e0" TextColor="#333" CornerRadius="8" Clicked="OnImageListDescriptionDialogPickPhotoClicked"/>
                                </Grid>
                                <FlexLayout x:Name="ImageListDescriptionDialogPhotoPreviewStack" Wrap="Wrap" JustifyContent="Start" Direction="Row" IsVisible="False"/>
                                <Label x:Name="ImageListDescriptionDialogPhotoCountLabel" Text="" FontSize="12" TextColor="#888" IsVisible="False"/>
                            </VerticalStackLayout>
                            <!-- Buttons -->
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                                <Button x:Name="CancelImageListDescriptionDialogButton" Text="Abbrechen" BackgroundColor="#f0f0f0" TextColor="#666" CornerRadius="12" HeightRequest="50" Clicked="OnCancelImageListDescriptionDialogClicked"/>
                                <Button x:Name="SaveImageListDescriptionDialogButton" Grid.Column="1" Text="Speichern" BackgroundColor="#2196F3" TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnSaveImageListDescriptionDialogClicked"/>
                            </Grid>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Border>
        </Grid>

        <!-- Aufgabe Abschliessen Popup -->
        <Grid x:Name="CompleteTaskPopupOverlay" IsVisible="False" BackgroundColor="#801a3a5c" ZIndex="1003" Grid.RowSpan="3">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCompleteTaskPopupBackgroundTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Margin="20" VerticalOptions="Center" MaximumWidthRequest="400">
                <Border.Shadow><Shadow Brush="Black" Offset="0,5" Radius="20" Opacity="0.3"/></Border.Shadow>
                <Grid RowDefinitions="Auto,Auto">
                    <!-- Blue Header -->
                    <Grid Padding="20,15,15,15" BackgroundColor="#1a3a5c">
                        <Label x:Name="CompleteTaskTitle" Text="Aufgabe abschliessen" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                        <Button Text="X" BackgroundColor="Transparent" TextColor="White" FontSize="18" FontAttributes="Bold" WidthRequest="40" HeightRequest="40" HorizontalOptions="End" Clicked="OnCancelCompleteTaskClicked"/>
                    </Grid>
                    <VerticalStackLayout Grid.Row="1" Padding="20" Spacing="20">
                        <Label x:Name="CompleteTaskMessage" Text="Wurde die Reinigung vollständig beendet?" FontSize="16" TextColor="#333" HorizontalTextAlignment="Center"/>
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Button x:Name="CancelCompleteTaskButton" Text="Nein" BackgroundColor="#f0f0f0" TextColor="#666" CornerRadius="12" HeightRequest="50" Clicked="OnCancelCompleteTaskClicked"/>
                            <Button x:Name="ConfirmCompleteTaskButton" Grid.Column="1" Text="Ja" BackgroundColor="#2196F3" TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnConfirmCompleteTaskClicked"/>
                        </Grid>
                    </VerticalStackLayout>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</ContentPage>

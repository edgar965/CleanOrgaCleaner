<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:CleanOrgaCleaner.Views.Components"
             x:Class="CleanOrgaCleaner.Views.AufgabePage"
             Title="Aufgabe"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- AppHeader Component -->
        <components:AppHeader x:Name="Header" Grid.Row="0"/>

        <!-- Scrollable Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15" Padding="15">

                <!-- Task Title (z.B. "02 Reinigung") - Combined apartment and task name -->
                <Label x:Name="TaskNameLabel" Text="" FontSize="22" FontAttributes="Bold" TextColor="#1a3a5c"/>

                <!-- Tab Bar (scrollable) -->
                <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never" Margin="0,5,0,10">
                    <HorizontalStackLayout Spacing="8">
                        <Button x:Name="TabAufgabeButton" Text="Aufgabe"
                                BackgroundColor="White" TextColor="#1a3a5c"
                                FontSize="15" FontAttributes="Bold" CornerRadius="12"
                                HeightRequest="40" Padding="16,0" BorderWidth="0" Clicked="OnTabAufgabeClicked"/>
                        <Button x:Name="TabProblemeButton" Text="Problem"
                                BackgroundColor="#1a3a5c" TextColor="White"
                                FontSize="15" FontAttributes="Bold" CornerRadius="12"
                                HeightRequest="40" Padding="16,0" BorderWidth="0" Clicked="OnTabProblemeClicked"/>
                        <Button x:Name="TabAnmerkungenButton" Text="Notiz"
                                BackgroundColor="#1a3a5c" TextColor="White"
                                FontSize="15" FontAttributes="Bold" CornerRadius="12"
                                HeightRequest="40" Padding="16,0" BorderWidth="0" Clicked="OnTabAnmerkungenClicked"/>
                        <Button x:Name="TabLogsButton" Text="Log"
                                BackgroundColor="#1a3a5c" TextColor="White"
                                FontSize="15" FontAttributes="Bold" CornerRadius="12"
                                HeightRequest="40" Padding="16,0" BorderWidth="0" Clicked="OnTabLogsClicked"/>
                    </HorizontalStackLayout>
                </ScrollView>

                <!-- Tab Content: Aufgabe -->
                <Border x:Name="TabAufgabeContent" IsVisible="True" BackgroundColor="White" StrokeShape="RoundRectangle 15" Stroke="Transparent" Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Label x:Name="NoticeLabel" Text="" FontSize="18" TextColor="#1a3a5c" LineHeight="1.5"
                               IsVisible="False"/>
                        <Label x:Name="NoTaskDescriptionLabel" Text="Keine Aufgabenbeschreibung vorhanden"
                               FontSize="14" TextColor="#999" FontAttributes="Italic"
                               HorizontalTextAlignment="Center" IsVisible="True"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Tab Content: Probleme -->
                <Border x:Name="TabProblemeContent" IsVisible="False" BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Padding="20">
                    <Border.Shadow><Shadow Brush="Black" Offset="0,4" Radius="15" Opacity="0.08"/></Border.Shadow>
                    <VerticalStackLayout Spacing="15">
                        <Button x:Name="AddProblemButton" Text="Problem melden" BackgroundColor="#2196F3" TextColor="White" FontSize="16" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnAddProblemClicked">
                            <Button.Shadow><Shadow Brush="#2196F3" Offset="0,3" Radius="10" Opacity="0.3"/></Button.Shadow>
                        </Button>
                        <VerticalStackLayout x:Name="ProblemsStack" Spacing="15"/>
                        <Label x:Name="NoProblemsLabel" Text="Keine Probleme gemeldet" FontSize="14" TextColor="#999" FontAttributes="Italic" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Tab Content: Anmerkungen -->
                <Border x:Name="TabAnmerkungenContent" IsVisible="False" BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Padding="20">
                    <Border.Shadow><Shadow Brush="Black" Offset="0,4" Radius="15" Opacity="0.08"/></Border.Shadow>
                    <VerticalStackLayout Spacing="15">
                        <Button x:Name="AddAnmerkungButton" Text="Anmerkung hinzufuegen" BackgroundColor="#2196F3" TextColor="White" FontSize="16" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnAddAnmerkungClicked">
                            <Button.Shadow><Shadow Brush="#2196F3" Offset="0,3" Radius="10" Opacity="0.3"/></Button.Shadow>
                        </Button>
                        <VerticalStackLayout x:Name="AnmerkungenStack" Spacing="15"/>
                        <Label x:Name="NoAnmerkungenLabel" Text="Keine Anmerkungen vorhanden" FontSize="14" TextColor="#999" FontAttributes="Italic" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Tab Content: Protokoll -->
                <Border x:Name="TabLogsContent" IsVisible="False" BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Padding="20">
                    <Border.Shadow><Shadow Brush="Black" Offset="0,4" Radius="15" Opacity="0.08"/></Border.Shadow>
                    <VerticalStackLayout Spacing="15">
                        <VerticalStackLayout x:Name="LogsStack" Spacing="10"/>
                        <Label x:Name="NoLogsLabel" Text="Keine Protokolleintraege vorhanden" FontSize="14" TextColor="#999" FontAttributes="Italic" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Fixed Start/Beenden Button am unteren Rand -->
        <Border Grid.Row="2" BackgroundColor="White">
            <Border.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS" Value="15,12,15,35"/>
                    <On Platform="Android" Value="15,12,15,50"/>
                </OnPlatform>
            </Border.Padding>
            <Border.Shadow><Shadow Brush="Black" Offset="0,-4" Radius="20" Opacity="0.15"/></Border.Shadow>
            <Button x:Name="StartStopButton" Text="Start" BackgroundColor="#9e9e9e" TextColor="White" FontSize="18" FontAttributes="Bold" CornerRadius="15" HeightRequest="55" HorizontalOptions="Fill" Clicked="OnStartStopClicked">
                <Button.Shadow><Shadow Brush="Gray" Offset="0,3" Radius="10" Opacity="0.15"/></Button.Shadow>
            </Button>
        </Border>

        <!-- Problem Popup -->
        <Grid x:Name="ProblemPopupOverlay" IsVisible="False" BackgroundColor="#801a3a5c" ZIndex="1000" Grid.RowSpan="3">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPopupBackgroundTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Margin="20" VerticalOptions="Center" MaximumWidthRequest="400" MaximumHeightRequest="600">
                <Border.Shadow><Shadow Brush="Black" Offset="0,5" Radius="20" Opacity="0.3"/></Border.Shadow>
                <Grid RowDefinitions="Auto,*">
                    <!-- Blue Header -->
                    <Grid Padding="20,15,15,15" BackgroundColor="#1a3a5c">
                        <Label x:Name="ProblemPopupTitle" Text="Problem melden" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                        <Button Text="X" BackgroundColor="Transparent" TextColor="White" FontSize="18" FontAttributes="Bold" WidthRequest="40" HeightRequest="40" HorizontalOptions="End" Clicked="OnCancelProblemClicked"/>
                    </Grid>
                    <ScrollView Grid.Row="1" Padding="20,10,20,20">
                        <VerticalStackLayout Spacing="15">
                            <VerticalStackLayout Spacing="5">
                                <Label x:Name="ProblemNameLabel" Text="Problem Name *" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Entry x:Name="ProblemNameEntry" FontSize="16" BackgroundColor="#f5f5f5"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Spacing="5">
                                <Label x:Name="DescriptionLabel" Text="Beschreibung" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Editor x:Name="ProblemDescriptionEditor" HeightRequest="80" FontSize="15" BackgroundColor="#f5f5f5" TextChanged="OnDescriptionTextChanged"/>
                                <Label x:Name="CharCountLabel" Text="0 / 300" FontSize="11" TextColor="#999" HorizontalTextAlignment="End"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Spacing="8">
                                <Label x:Name="PhotosLabel" Text="Fotos" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                    <Button x:Name="TakePhotoButton" Text="Kamera" BackgroundColor="#e0e0e0" TextColor="#333" CornerRadius="8" Clicked="OnTakePhotoClicked"/>
                                    <Button x:Name="PickPhotoButton" Grid.Column="1" Text="Galerie" BackgroundColor="#e0e0e0" TextColor="#333" CornerRadius="8" Clicked="OnPickPhotoClicked"/>
                                </Grid>
                                <HorizontalStackLayout x:Name="PhotoPreviewStack" Spacing="8" IsVisible="False"/>
                                <Label x:Name="PhotoCountLabel" Text="" FontSize="12" TextColor="#888" IsVisible="False"/>
                            </VerticalStackLayout>
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                                <Button x:Name="CancelProblemButton" Text="Abbrechen" BackgroundColor="#f0f0f0" TextColor="#666" CornerRadius="12" HeightRequest="50" Clicked="OnCancelProblemClicked"/>
                                <Button x:Name="SaveProblemButton" Grid.Column="1" Text="Speichern" BackgroundColor="#2196F3" TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnSaveProblemClicked"/>
                            </Grid>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Border>
        </Grid>

        <!-- Anmerkung hinzufuegen Popup -->
        <Grid x:Name="AnmerkungPopupOverlay" IsVisible="False" BackgroundColor="#801a3a5c" ZIndex="1000" Grid.RowSpan="3">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAnmerkungPopupBackgroundTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Margin="20" VerticalOptions="Center" MaximumWidthRequest="400" MaximumHeightRequest="500">
                <Border.Shadow><Shadow Brush="Black" Offset="0,5" Radius="20" Opacity="0.3"/></Border.Shadow>
                <Grid RowDefinitions="Auto,*">
                    <!-- Blue Header -->
                    <Grid Padding="20,15,15,15" BackgroundColor="#1a3a5c">
                        <Label x:Name="AnmerkungPopupTitle" Text="Anmerkung hinzufuegen" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                        <Button Text="X" BackgroundColor="Transparent" TextColor="White" FontSize="18" FontAttributes="Bold" WidthRequest="40" HeightRequest="40" HorizontalOptions="End" Clicked="OnCancelAnmerkungClicked"/>
                    </Grid>
                    <ScrollView Grid.Row="1" Padding="20,10,20,20">
                        <VerticalStackLayout Spacing="15">
                            <VerticalStackLayout Spacing="5">
                                <Label x:Name="NoteLabel" Text="Notiz" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Editor x:Name="AnmerkungNotizEditor" Placeholder="Notiz eingeben..." HeightRequest="120" FontSize="15" BackgroundColor="#f5f5f5" AutoSize="Disabled"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Spacing="8">
                                <Label x:Name="SelectImageLabel" Text="Bild (optional)" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                    <Button x:Name="AnmerkungTakePhotoButton" Text="Kamera" BackgroundColor="#e0e0e0" TextColor="#333" CornerRadius="8" Clicked="OnAnmerkungTakePhotoClicked"/>
                                    <Button x:Name="AnmerkungPickPhotoButton" Grid.Column="1" Text="Galerie" BackgroundColor="#e0e0e0" TextColor="#333" CornerRadius="8" Clicked="OnAnmerkungPickPhotoClicked"/>
                                </Grid>
                                <Border x:Name="AnmerkungPreviewBorder" StrokeShape="RoundRectangle 12" Stroke="#e0e0e0" Padding="5" IsVisible="False" HorizontalOptions="Center">
                                    <Image x:Name="AnmerkungPreviewImage" WidthRequest="150" HeightRequest="150" Aspect="AspectFill"/>
                                </Border>
                            </VerticalStackLayout>
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                                <Button x:Name="CancelAnmerkungButton" Text="Abbrechen" BackgroundColor="#f0f0f0" TextColor="#666" CornerRadius="12" HeightRequest="50" Clicked="OnCancelAnmerkungClicked"/>
                                <Button x:Name="SaveAnmerkungButton" Grid.Column="1" Text="Speichern" BackgroundColor="#2196F3" TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnSaveAnmerkungClicked"/>
                            </Grid>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Border>
        </Grid>

        <!-- Problem Löschen Popup -->
        <Grid x:Name="DeleteProblemPopupOverlay" IsVisible="False" BackgroundColor="#801a3a5c" ZIndex="1002" Grid.RowSpan="3">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDeleteProblemPopupBackgroundTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Margin="20" VerticalOptions="Center" MaximumWidthRequest="400">
                <Border.Shadow><Shadow Brush="Black" Offset="0,5" Radius="20" Opacity="0.3"/></Border.Shadow>
                <Grid RowDefinitions="Auto,Auto">
                    <!-- Blue Header -->
                    <Grid Padding="20,15,15,15" BackgroundColor="#1a3a5c">
                        <Label x:Name="DeleteProblemTitle" Text="Problem löschen" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                        <Button Text="X" BackgroundColor="Transparent" TextColor="White" FontSize="18" FontAttributes="Bold" WidthRequest="40" HeightRequest="40" HorizontalOptions="End" Clicked="OnCancelDeleteProblemClicked"/>
                    </Grid>
                    <VerticalStackLayout Grid.Row="1" Padding="20" Spacing="20">
                        <Label x:Name="DeleteProblemMessage" Text="Möchtest du dieses Problem wirklich löschen?" FontSize="16" TextColor="#333" HorizontalTextAlignment="Center"/>
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Button x:Name="CancelDeleteProblemButton" Text="Abbrechen" BackgroundColor="#f0f0f0" TextColor="#666" CornerRadius="12" HeightRequest="50" Clicked="OnCancelDeleteProblemClicked"/>
                            <Button x:Name="ConfirmDeleteProblemButton" Grid.Column="1" Text="Ja, löschen" BackgroundColor="#2196F3" TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnConfirmDeleteProblemClicked"/>
                        </Grid>
                    </VerticalStackLayout>
                </Grid>
            </Border>
        </Grid>

        <!-- Aufgabe Abschliessen Popup -->
        <Grid x:Name="CompleteTaskPopupOverlay" IsVisible="False" BackgroundColor="#801a3a5c" ZIndex="1003" Grid.RowSpan="3">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCompleteTaskPopupBackgroundTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Margin="20" VerticalOptions="Center" MaximumWidthRequest="400">
                <Border.Shadow><Shadow Brush="Black" Offset="0,5" Radius="20" Opacity="0.3"/></Border.Shadow>
                <Grid RowDefinitions="Auto,Auto">
                    <!-- Blue Header -->
                    <Grid Padding="20,15,15,15" BackgroundColor="#1a3a5c">
                        <Label x:Name="CompleteTaskTitle" Text="Aufgabe abschliessen" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                        <Button Text="X" BackgroundColor="Transparent" TextColor="White" FontSize="18" FontAttributes="Bold" WidthRequest="40" HeightRequest="40" HorizontalOptions="End" Clicked="OnCancelCompleteTaskClicked"/>
                    </Grid>
                    <VerticalStackLayout Grid.Row="1" Padding="20" Spacing="20">
                        <Label x:Name="CompleteTaskMessage" Text="Wurde die Reinigung vollständig beendet?" FontSize="16" TextColor="#333" HorizontalTextAlignment="Center"/>
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Button x:Name="CancelCompleteTaskButton" Text="Nein" BackgroundColor="#f0f0f0" TextColor="#666" CornerRadius="12" HeightRequest="50" Clicked="OnCancelCompleteTaskClicked"/>
                            <Button x:Name="ConfirmCompleteTaskButton" Grid.Column="1" Text="Ja" BackgroundColor="#2196F3" TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnConfirmCompleteTaskClicked"/>
                        </Grid>
                    </VerticalStackLayout>
                </Grid>
            </Border>
        </Grid>

        <!-- Bild Löschen Popup -->
        <Grid x:Name="DeleteBildPopupOverlay" IsVisible="False" BackgroundColor="#801a3a5c" ZIndex="1004" Grid.RowSpan="3">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDeleteBildPopupBackgroundTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Margin="20" VerticalOptions="Center" MaximumWidthRequest="400">
                <Border.Shadow><Shadow Brush="Black" Offset="0,5" Radius="20" Opacity="0.3"/></Border.Shadow>
                <Grid RowDefinitions="Auto,Auto">
                    <!-- Blue Header -->
                    <Grid Padding="20,15,15,15" BackgroundColor="#1a3a5c">
                        <Label x:Name="DeleteBildTitle" Text="Bild löschen" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                        <Button Text="X" BackgroundColor="Transparent" TextColor="White" FontSize="18" FontAttributes="Bold" WidthRequest="40" HeightRequest="40" HorizontalOptions="End" Clicked="OnCancelDeleteBildClicked"/>
                    </Grid>
                    <VerticalStackLayout Grid.Row="1" Padding="20" Spacing="20">
                        <Label x:Name="DeleteBildMessage" Text="Möchtest du dieses Bild wirklich löschen?" FontSize="16" TextColor="#333" HorizontalTextAlignment="Center"/>
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Button x:Name="CancelDeleteBildButton" Text="Abbrechen" BackgroundColor="#f0f0f0" TextColor="#666" CornerRadius="12" HeightRequest="50" Clicked="OnCancelDeleteBildClicked"/>
                            <Button x:Name="ConfirmDeleteBildButton" Grid.Column="1" Text="Ja, löschen" BackgroundColor="#2196F3" TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Clicked="OnConfirmDeleteBildClicked"/>
                        </Grid>
                    </VerticalStackLayout>
                </Grid>
            </Border>
        </Grid>

        <!-- Problem Detail Popup -->
        <Grid x:Name="ProblemDetailPopupOverlay" IsVisible="False" BackgroundColor="#801a3a5c" ZIndex="1001" Grid.RowSpan="3">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnProblemDetailPopupBackgroundTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Margin="20" VerticalOptions="Center" MaximumWidthRequest="500" MaximumHeightRequest="700">
                <Border.Shadow><Shadow Brush="Black" Offset="0,5" Radius="20" Opacity="0.3"/></Border.Shadow>
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Blue Header -->
                    <Grid Padding="20,15,15,15" BackgroundColor="#1a3a5c">
                        <Label x:Name="ProblemDetailTitle" Text="Problem Details" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                        <Button Text="X" BackgroundColor="Transparent" TextColor="White" FontSize="18" FontAttributes="Bold" WidthRequest="40" HeightRequest="40" HorizontalOptions="End" Clicked="OnCloseProblemDetailClicked"/>
                    </Grid>
                    <!-- Content -->
                    <ScrollView Grid.Row="1" Padding="20">
                        <VerticalStackLayout Spacing="15">
                            <Label x:Name="ProblemDetailName" Text="" FontSize="18" FontAttributes="Bold" TextColor="#333"/>
                            <Label x:Name="ProblemDetailDescription" Text="" FontSize="15" TextColor="#666" IsVisible="False"/>
                            <VerticalStackLayout x:Name="ProblemDetailPhotosStack" Spacing="10" IsVisible="False">
                                <Label x:Name="ProblemDetailPhotosLabel" Text="Fotos:" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <FlexLayout x:Name="ProblemDetailPhotos" Wrap="Wrap" JustifyContent="Start" Direction="Row"/>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </ScrollView>
                    <!-- Footer Button -->
                    <Grid Grid.Row="2" Padding="15" BackgroundColor="#f8f9fa">
                        <Button x:Name="CloseProblemDetailButton" Text="Schließen" BackgroundColor="#e0e0e0" TextColor="#666" CornerRadius="10" HeightRequest="45" Clicked="OnCloseProblemDetailClicked"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Bild Detail Popup -->
        <Grid x:Name="BildDetailPopupOverlay" IsVisible="False" BackgroundColor="#801a3a5c" ZIndex="1001" Grid.RowSpan="3">
            <BoxView Color="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBildDetailPopupBackgroundTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <Border BackgroundColor="White" StrokeShape="RoundRectangle 20" Stroke="Transparent" Margin="20" VerticalOptions="Center" MaximumWidthRequest="500" MaximumHeightRequest="700">
                <Border.Shadow><Shadow Brush="Black" Offset="0,5" Radius="20" Opacity="0.3"/></Border.Shadow>
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Blue Header -->
                    <Grid Padding="20,15,15,15" BackgroundColor="#1a3a5c">
                        <Label x:Name="BildDetailTitle" Text="Bild Details" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                        <Button Text="X" BackgroundColor="Transparent" TextColor="White" FontSize="18" FontAttributes="Bold" WidthRequest="40" HeightRequest="40" HorizontalOptions="End" Clicked="OnCloseBildDetailClicked"/>
                    </Grid>
                    <!-- Content -->
                    <ScrollView Grid.Row="1" Padding="20">
                        <VerticalStackLayout Spacing="15">
                            <Border StrokeShape="RoundRectangle 12" Stroke="#e0e0e0" HorizontalOptions="Center">
                                <Image x:Name="BildDetailImage" WidthRequest="280" HeightRequest="280" Aspect="AspectFill"/>
                            </Border>
                            <Label x:Name="BildDetailDatum" Text="" FontSize="12" TextColor="#999"/>
                            <VerticalStackLayout Spacing="5">
                                <Label x:Name="BildDetailNoteLabel" Text="Notiz:" FontSize="14" FontAttributes="Bold" TextColor="#555"/>
                                <Editor x:Name="BildDetailNotizEditor" Placeholder="Notiz zum Bild..." HeightRequest="100" FontSize="15" BackgroundColor="#f5f5f5"/>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </ScrollView>
                    <!-- Footer Buttons -->
                    <Grid Grid.Row="2" Padding="15" ColumnDefinitions="*,*" ColumnSpacing="10" BackgroundColor="#f8f9fa">
                        <Button x:Name="CloseBildButton" Text="Abbrechen" BackgroundColor="#e0e0e0" TextColor="#666" CornerRadius="10" HeightRequest="45" Clicked="OnCloseBildDetailClicked"/>
                        <Button x:Name="SaveBildDetailButton" Grid.Column="1" Text="Speichern" BackgroundColor="#2196F3" TextColor="White" FontAttributes="Bold" CornerRadius="10" HeightRequest="45" Clicked="OnSaveBildDetailClicked"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</ContentPage>

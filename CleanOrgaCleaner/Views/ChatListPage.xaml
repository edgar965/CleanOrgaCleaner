<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:CleanOrgaCleaner.Views.Components"
             x:Class="CleanOrgaCleaner.Views.ChatListPage"
             Title="Chats"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- AppHeader Component -->
        <components:AppHeader x:Name="Header" Grid.Row="0"/>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="15,15,15,50">
            <VerticalStackLayout Spacing="15">

                <!-- Header Card -->
                <Border BackgroundColor="White" StrokeShape="RoundRectangle 15" Stroke="Transparent" Padding="20">
                    <VerticalStackLayout Spacing="5">
                        <Label x:Name="MessagesLabel" Text="Nachrichten" FontSize="20" FontAttributes="Bold" TextColor="#333"/>
                        <Label x:Name="SelectContactLabel" Text="Waehle einen Kontakt" FontSize="14" TextColor="#666"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Admin Section -->
                <Border BackgroundColor="White" StrokeShape="RoundRectangle 15" Stroke="Transparent" Padding="0">
                    <VerticalStackLayout>
                        <Label x:Name="AdminSectionLabel" Text="ADMINISTRATION" FontSize="12" FontAttributes="Bold" TextColor="#666" Padding="20,12" BackgroundColor="#f8f9fa"/>

                        <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                            <!-- Admin avatar in circular border (like Django client) -->
                            <Border Grid.Column="0" WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 25" Stroke="#e0e0e0" BackgroundColor="#f0f0f0">
                                <Label x:Name="AdminAvatarLabel" Text="&#x1F468;&#x200D;&#x1F4BC;" FontSize="28" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0" VerticalOptions="Center">
                                <Label Text="Admin" FontSize="16" FontAttributes="Bold" TextColor="#333"/>
                                <Label x:Name="AdminRoleLabel" Text="office_admin" FontSize="13" TextColor="#888"/>
                            </VerticalStackLayout>

                            <Button Grid.Column="2" Text="Chat" FontSize="14" WidthRequest="70" HeightRequest="40" CornerRadius="20" BackgroundColor="#2196F3" TextColor="White" Clicked="OnAdminChatTapped"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Colleagues Section -->
                <Border BackgroundColor="White" StrokeShape="RoundRectangle 15" Stroke="Transparent" Padding="0">
                    <VerticalStackLayout>
                        <Label x:Name="ColleaguesSectionLabel" Text="KOLLEGEN" FontSize="12" FontAttributes="Bold" TextColor="#666" Padding="20,12" BackgroundColor="#f8f9fa"/>

                        <CollectionView x:Name="CleanersCollection" SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                                        <!-- Avatar in circular border (like Django client) -->
                                        <Border Grid.Column="0"
                                                WidthRequest="50"
                                                HeightRequest="50"
                                                StrokeShape="RoundRectangle 25"
                                                Stroke="#e0e0e0"
                                                BackgroundColor="#f0f0f0">
                                            <Label Text="{Binding DisplayAvatar}"
                                                   FontSize="28"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Border>

                                        <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0" VerticalOptions="Center">
                                            <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" TextColor="#333"/>
                                            <Label Text="cleaner_role" FontSize="13" TextColor="#888"/>
                                        </VerticalStackLayout>

                                        <Button Grid.Column="2" Text="Chat" FontSize="14" WidthRequest="70" HeightRequest="40" CornerRadius="20" BackgroundColor="#2196F3" TextColor="White" CommandParameter="{Binding .}" Clicked="OnCleanerChatTapped"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>

                            <CollectionView.EmptyView>
                                <VerticalStackLayout Padding="20" HorizontalOptions="Center">
                                    <Label Text="Keine Kollegen verfuegbar" FontSize="14" TextColor="#888" HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>

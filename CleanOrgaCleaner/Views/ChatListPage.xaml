<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanOrgaCleaner.Views.ChatListPage"
             Title="Chats"
             BackgroundColor="#f5f5f5"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Grid.Row="0" Padding="15,45,15,15">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667eea" Offset="0"/>
                    <GradientStop Color="#764ba2" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid ColumnDefinitions="Auto,*,Auto">
                <HorizontalStackLayout Grid.Column="0" Spacing="6" VerticalOptions="Center">
                    <Image Source="logo.jpg" WidthRequest="28" HeightRequest="28">
                        <Image.Clip>
                            <EllipseGeometry Center="14,14" RadiusX="14" RadiusY="14"/>
                        </Image.Clip>
                    </Image>
                    <Label Text="CleanOrga" FontSize="16" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <Label Grid.Column="1" Text="Chats" FontSize="18" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Grid>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="15">
            <VerticalStackLayout Spacing="15">
                
                <!-- Header Card -->
                <Border BackgroundColor="White" StrokeShape="RoundRectangle 15" Stroke="Transparent" Padding="20">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Nachrichten" FontSize="20" FontAttributes="Bold" TextColor="#333"/>
                        <Label Text="Waehle einen Kontakt" FontSize="14" TextColor="#666"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Admin Section -->
                <Border BackgroundColor="White" StrokeShape="RoundRectangle 15" Stroke="Transparent" Padding="0">
                    <VerticalStackLayout>
                        <Label Text="ADMINISTRATION" FontSize="12" FontAttributes="Bold" TextColor="#666" Padding="20,12" BackgroundColor="#f8f9fa"/>
                        
                        <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                            <Border Grid.Column="0" WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 25" Stroke="Transparent">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#667eea" Offset="0"/>
                                        <GradientStop Color="#764ba2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Label Text="A" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0" VerticalOptions="Center">
                                <Label Text="Admin" FontSize="16" FontAttributes="Bold" TextColor="#333"/>
                                <Label Text="Buero / Verwaltung" FontSize="13" TextColor="#888"/>
                            </VerticalStackLayout>
                            
                            <Button Grid.Column="2" Text="Chat" FontSize="14" WidthRequest="70" HeightRequest="40" CornerRadius="20" BackgroundColor="#2196F3" TextColor="White" Clicked="OnAdminChatTapped"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Colleagues Section -->
                <Border BackgroundColor="White" StrokeShape="RoundRectangle 15" Stroke="Transparent" Padding="0">
                    <VerticalStackLayout>
                        <Label Text="KOLLEGEN" FontSize="12" FontAttributes="Bold" TextColor="#666" Padding="20,12" BackgroundColor="#f8f9fa"/>
                        
                        <CollectionView x:Name="CleanersCollection" SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">
                                        <Border Grid.Column="0" WidthRequest="50" HeightRequest="50" StrokeShape="RoundRectangle 25" Stroke="Transparent" BackgroundColor="#4CAF50">
                                            <Label Text="{Binding Initial}" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        </Border>
                                        
                                        <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0" VerticalOptions="Center">
                                            <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" TextColor="#333"/>
                                            <Label Text="Reinigungskraft" FontSize="13" TextColor="#888"/>
                                        </VerticalStackLayout>
                                        
                                        <Button Grid.Column="2" Text="Chat" FontSize="14" WidthRequest="70" HeightRequest="40" CornerRadius="20" BackgroundColor="#2196F3" TextColor="White" CommandParameter="{Binding .}" Clicked="OnCleanerChatTapped"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            
                            <CollectionView.EmptyView>
                                <VerticalStackLayout Padding="20" HorizontalOptions="Center">
                                    <Label Text="Keine Kollegen verfuegbar" FontSize="14" TextColor="#888" HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>